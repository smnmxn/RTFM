<div class="min-h-screen bg-gray-50">
  <!-- Header -->
  <header class="bg-white shadow-sm">
    <div class="max-w-7xl mx-auto px-4 py-4 sm:px-6 lg:px-8 flex justify-between items-center">
      <h1 class="text-2xl font-bold text-gray-900">RTFM</h1>
      <div class="flex items-center gap-4">
        <span class="text-gray-600">
          <%= current_user.name || current_user.github_username %>
        </span>
        <%= button_to "Sign out", logout_path, method: :delete, class: "text-gray-500 hover:text-gray-700" %>
      </div>
    </div>
  </header>

  <!-- Main content -->
  <main class="max-w-7xl mx-auto px-4 py-8 sm:px-6 lg:px-8">
    <% if flash[:notice] %>
      <div class="mb-6 bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <div class="flex justify-between items-center mb-6">
      <h2 class="text-xl font-semibold text-gray-900">Your Projects</h2>
      <%= link_to "New Project", new_project_path, class: "px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition-colors" %>
    </div>

    <% if @projects.any? %>
      <div class="bg-white shadow rounded-lg divide-y divide-gray-200">
        <% @projects.each do |project| %>
          <%= link_to project_path(project), class: "block p-6 hover:bg-gray-50" do %>
            <div class="flex justify-between items-start">
              <div>
                <h3 class="text-lg font-medium text-gray-900"><%= project.name %></h3>
                <p class="text-sm text-gray-500"><%= project.github_repo %></p>
              </div>
              <span class="text-sm text-gray-400">
                <%= project.updates.count %> updates
              </span>
            </div>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-12 bg-white rounded-lg shadow">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
        </svg>
        <h3 class="mt-2 text-lg font-medium text-gray-900">No projects yet</h3>
        <p class="mt-1 text-gray-500">Get started by connecting a GitHub repository.</p>
        <div class="mt-6">
          <%= link_to "Create your first project", new_project_path, class: "px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition-colors" %>
        </div>
      </div>
    <% end %>
  </main>
</div>
