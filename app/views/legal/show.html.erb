<% content_for(:title) { "#{@title} - supportpages.io" } %>

<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <!-- Back link -->
  <div class="mb-8">
    <a href="/legal" class="inline-flex items-center gap-2 text-sm text-zinc-400 hover:text-white transition-colors">
      <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
      Back to Trust Center
    </a>
  </div>

  <!-- Document content -->
  <article class="bg-zinc-900/50 backdrop-blur-sm rounded-xl border border-zinc-800 p-8 md:p-12">
    <div class="legal-content legal-content-dark">
      <%= @content %>
    </div>
  </article>

  <!-- Print/Download hint -->
  <div class="mt-6 text-center text-sm text-zinc-600">
    <p>Need a copy? You can print this page or save as PDF from your browser.</p>
  </div>
</div>
