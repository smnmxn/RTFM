<% content_for(:title) { "Trust Center - supportpages.io" } %>

<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <!-- Hero -->
  <div class="text-center mb-12">
    <h1 class="text-3xl font-bold text-white mb-4">Trust Center</h1>
    <p class="text-lg text-zinc-400 max-w-2xl mx-auto">
      We take your privacy and security seriously. Here's everything you need to know about how we handle your data.
    </p>
  </div>

  <!-- Quick facts -->
  <div class="bg-zinc-900/50 backdrop-blur-sm rounded-xl border border-zinc-800 p-6 mb-12">
    <h2 class="text-lg font-semibold text-white mb-4">Quick Facts</h2>
    <div class="grid md:grid-cols-2 gap-4">
      <div class="flex items-start gap-3">
        <div class="w-8 h-8 bg-emerald-500/15 rounded-lg flex items-center justify-center flex-shrink-0">
          <svg class="w-4 h-4 text-emerald-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
        </div>
        <div>
          <p class="font-medium text-white">EU-based hosting</p>
          <p class="text-sm text-zinc-400">Data stored in Finland (Hetzner)</p>
        </div>
      </div>
      <div class="flex items-start gap-3">
        <div class="w-8 h-8 bg-emerald-500/15 rounded-lg flex items-center justify-center flex-shrink-0">
          <svg class="w-4 h-4 text-emerald-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
        </div>
        <div>
          <p class="font-medium text-white">GDPR compliant</p>
          <p class="text-sm text-zinc-400">DPA available for customers</p>
        </div>
      </div>
      <div class="flex items-start gap-3">
        <div class="w-8 h-8 bg-emerald-500/15 rounded-lg flex items-center justify-center flex-shrink-0">
          <svg class="w-4 h-4 text-emerald-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
        </div>
        <div>
          <p class="font-medium text-white">Code not stored</p>
          <p class="text-sm text-zinc-400">Processed temporarily, then deleted</p>
        </div>
      </div>
      <div class="flex items-start gap-3">
        <div class="w-8 h-8 bg-emerald-500/15 rounded-lg flex items-center justify-center flex-shrink-0">
          <svg class="w-4 h-4 text-emerald-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
        </div>
        <div>
          <p class="font-medium text-white">No data selling</p>
          <p class="text-sm text-zinc-400">We never sell your data</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Documents -->
  <h2 class="text-lg font-semibold text-white mb-4">Documentation</h2>
  <div class="space-y-4">
    <% @documents.each do |key, doc| %>
      <a href="/legal/<%= key %>" class="block bg-zinc-900/50 backdrop-blur-sm rounded-xl border border-zinc-800 p-6 hover:border-zinc-600 hover:bg-zinc-900/70 transition-all">
        <div class="flex items-center justify-between">
          <div>
            <h3 class="font-semibold text-white"><%= doc[:title] %></h3>
            <p class="text-sm text-zinc-400 mt-1"><%= doc[:description] %></p>
          </div>
          <svg class="w-5 h-5 text-zinc-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </div>
      </a>
    <% end %>
  </div>

  <!-- Contact -->
  <div class="mt-12 bg-zinc-900/50 backdrop-blur-sm rounded-xl border border-zinc-800 p-6 text-center">
    <h2 class="text-lg font-semibold text-white mb-2">Questions?</h2>
    <p class="text-zinc-400 mb-4">
      If you have questions about our privacy practices or need a signed DPA, we're happy to help.
    </p>
    <div class="flex flex-wrap justify-center gap-4 text-sm">
      <a href="mailto:privacy@supportpages.io" class="text-zinc-300 hover:text-white font-medium transition-colors">
        privacy@supportpages.io
      </a>
      <span class="text-zinc-700">|</span>
      <a href="mailto:security@supportpages.io" class="text-zinc-300 hover:text-white font-medium transition-colors">
        security@supportpages.io
      </a>
    </div>
    <div class="mt-4 pt-4 border-t border-zinc-800 text-xs text-zinc-600">
      <p>supportpages.io is a trading name of Surface Layer Limited (Company No. 17026012)</p>
      <p>Registered in England and Wales | 128 City Road, London, EC1V 2NX</p>
    </div>
  </div>
</div>
