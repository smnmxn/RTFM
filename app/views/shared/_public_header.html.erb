<!-- Public header for unauthenticated pages -->
<!-- Pass active: "help" | "trust" | "login" to highlight the current page -->
<!-- Pass theme: "dark" for transparent header with white text (used on login page) -->
<% active ||= nil %>
<% theme ||= "light" %>
<% dark = theme == "dark" %>
<header class="<%= dark ? 'absolute top-0 left-0 right-0 z-30 bg-transparent' : 'bg-white border-b border-slate-200' %>">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
    <div class="flex items-center justify-between">
      <a href="/" class="flex items-center gap-3 hover:opacity-80 transition-opacity">
        <%= image_tag "logo.png", alt: "supportpages.io", class: "h-8 #{dark ? 'brightness-0 invert' : ''}" %>
      </a>
      <nav class="flex items-center gap-6 text-sm">
        <a href="https://help.supportpages.io"
           target="_blank"
           rel="noopener noreferrer"
           class="<%= dark ? (active == 'help' ? 'text-white font-semibold' : 'text-slate-300 hover:text-white') : (active == 'help' ? 'text-slate-900 font-semibold' : 'text-slate-600 hover:text-slate-900') %> transition-colors">
          Help
        </a>
        <a href="/legal"
           class="<%= dark ? (active == 'trust' ? 'text-white font-semibold' : 'text-slate-300 hover:text-white') : (active == 'trust' ? 'text-slate-900 font-semibold' : 'text-slate-600 hover:text-slate-900') %> transition-colors">
          Trust Center
        </a>
        <a href="/login"
           class="<%= dark ? (active == 'login' ? 'text-violet-300 font-semibold' : 'text-violet-400 hover:text-violet-300') : (active == 'login' ? 'text-violet-700 font-semibold' : 'text-violet-600 hover:text-violet-700') %> transition-colors">
          Sign in
        </a>
      </nav>
    </div>
  </div>
</header>
