<%# SVG + text logo for supportpages.io
     Pass theme: "dark" for white-on-dark (landing page),
                 "light" for dark-on-light (legal pages),
                 "auto" for CSS-variable-aware (authenticated app — responds to .dark class) %>
<% theme ||= "light" %>
<% if theme == "auto" %>
  <%# Uses dark: variant — automatically adapts to dark/light mode %>
  <span class="flex items-center">
    <%= image_tag "icon.png", class: "w-7 h-7 block dark:hidden", alt: "supportpages.io" %>
    <%= image_tag "icon-dark.png", class: "w-7 h-7 hidden dark:block", alt: "supportpages.io" %>
    <span class="app-text text-lg font-semibold tracking-tight" style="font-family: var(--app-font-display);">
      supportpages<span class="app-text-muted">.io</span>
    </span>
  </span>
<% else %>
  <% dark = theme == "dark" %>
  <span class="flex items-center">
    <%= image_tag dark ? "icon-dark.png" : "icon.png", class: "w-7 h-7", alt: "supportpages.io" %>
    <span class="<%= dark ? 'text-white' : 'text-slate-900' %> text-lg font-semibold tracking-tight" style="font-family: 'Space Grotesk', system-ui, sans-serif;">
      supportpages<span class="<%= dark ? 'text-zinc-500' : 'text-slate-400' %>">.io</span>
    </span>
  </span>
<% end %>
