<header class="app-surface app-shadow-sm">
  <div class="max-w-7xl mx-auto px-4 py-3 sm:px-6 lg:px-8 flex justify-between items-center">
    <div class="flex items-center gap-4">
      <%= link_to projects_path, class: "hover:opacity-80 transition-opacity" do %>
        <%= render "shared/logo", theme: "auto" %>
      <% end %>
      <% if local_assigns[:project] %>
        <span class="app-text-muted select-none">/</span>
        <h1 class="text-lg font-semibold app-text"><%= link_to project.name, project_path(project), class: "hover:opacity-80 transition-opacity" %></h1>
      <% end %>
    </div>
    <div class="flex items-center gap-2">
      <% if local_assigns[:project] %>
        <%= link_to project_help_centre_url(project), target: "_blank",
            class: "p-1.5 rounded-lg app-text-muted hover:app-text hover:app-surface-alt transition-colors",
            title: "View help centre" do %>
          <%= heroicon "arrow-top-right-on-square", options: { class: "w-5 h-5" } %>
        <% end %>
      <% end %>
      <%# Theme toggle %>
      <button data-controller="theme" data-action="click->theme#toggle"
              class="p-1.5 rounded-lg app-text-muted hover:app-text hover:app-surface-alt transition-colors"
              title="Toggle dark mode">
        <svg class="w-5 h-5 hidden dark:block" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 2.25a.75.75 0 0 1 .75.75v2.25a.75.75 0 0 1-1.5 0V3a.75.75 0 0 1 .75-.75ZM7.5 12a4.5 4.5 0 1 1 9 0 4.5 4.5 0 0 1-9 0ZM18.894 6.166a.75.75 0 0 0-1.06-1.06l-1.591 1.59a.75.75 0 1 0 1.06 1.061l1.591-1.59ZM21.75 12a.75.75 0 0 1-.75.75h-2.25a.75.75 0 0 1 0-1.5H21a.75.75 0 0 1 .75.75ZM17.834 18.894a.75.75 0 0 0 1.06-1.06l-1.59-1.591a.75.75 0 1 0-1.061 1.06l1.59 1.591ZM12 18a.75.75 0 0 1 .75.75V21a.75.75 0 0 1-1.5 0v-2.25A.75.75 0 0 1 12 18ZM7.758 17.303a.75.75 0 0 0-1.061-1.06l-1.591 1.59a.75.75 0 0 0 1.06 1.061l1.591-1.59ZM6 12a.75.75 0 0 1-.75.75H3a.75.75 0 0 1 0-1.5h2.25A.75.75 0 0 1 6 12ZM6.697 7.757a.75.75 0 0 0 1.06-1.06l-1.59-1.591a.75.75 0 0 0-1.061 1.06l1.59 1.591Z" />
        </svg>
        <svg class="w-5 h-5 block dark:hidden" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
          <path fill-rule="evenodd" d="M9.528 1.718a.75.75 0 0 1 .162.819A8.97 8.97 0 0 0 9 6a9 9 0 0 0 9 9 8.97 8.97 0 0 0 3.463-.69.75.75 0 0 1 .981.98 10.503 10.503 0 0 1-9.694 6.46c-5.799 0-10.5-4.7-10.5-10.5 0-4.368 2.667-8.112 6.46-9.694a.75.75 0 0 1 .818.162Z" clip-rule="evenodd" />
        </svg>
      </button>
      <%# User dropdown %>
      <div class="relative" data-controller="dropdown">
        <button data-action="click->dropdown#toggle"
                class="w-8 h-8 rounded-full app-surface-alt flex items-center justify-center text-sm font-medium app-text-secondary hover:app-text transition-colors"
                title="<%= current_user.name || current_user.github_username %>">
          <%= (current_user.name || current_user.github_username).first.upcase %>
        </button>
        <div data-dropdown-target="menu" class="hidden absolute right-0 mt-2 w-48 app-surface rounded-lg app-shadow border app-border py-1 z-50">
          <div class="px-3 py-2 border-b app-border">
            <p class="text-sm font-medium app-text truncate"><%= current_user.name || current_user.github_username %></p>
            <% if current_user.name && current_user.github_username %>
              <p class="text-xs app-text-muted truncate">@<%= current_user.github_username %></p>
            <% end %>
          </div>
          <%= link_to "https://help.supportpages.io", target: "_blank",
              class: "flex items-center gap-2 px-3 py-2 text-sm app-text-secondary hover:app-text hover:app-surface-alt transition-colors" do %>
            <%= heroicon "question-mark-circle", options: { class: "w-4 h-4" } %>
            Get Help
          <% end %>
          <%= button_to "Sign out", logout_path, method: :delete,
              class: "w-full flex items-center gap-2 px-3 py-2 text-sm app-text-secondary hover:app-text hover:app-surface-alt transition-colors text-left" %>
        </div>
      </div>
    </div>
  </div>
</header>
