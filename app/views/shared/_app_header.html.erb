<header class="bg-white shadow-sm">
  <div class="max-w-7xl mx-auto px-4 py-4 sm:px-6 lg:px-8 flex justify-between items-center">
    <div class="flex items-center gap-4">
      <%= link_to projects_path, class: "hover:opacity-80 transition-opacity" do %>
        <%= render "shared/logo", theme: "light" %>
      <% end %>
      <% if local_assigns[:project] %>
        <h1 class="text-2xl font-bold text-gray-900"><%= link_to project.name, project_path(project), class: "hover:text-indigo-600 transition-colors" %></h1>
        <%= link_to project.github_repo, "https://github.com/#{project.github_repo}", target: "_blank", class: "text-sm text-gray-500 hover:text-indigo-600" %>
      <% end %>
    </div>
    <div class="flex items-center gap-4">
      <% if local_assigns[:project] %>
        <%= link_to project_help_centre_url(project), target: "_blank", class: "inline-flex items-center gap-1.5 text-sm text-indigo-600 hover:text-indigo-800 font-medium" do %>
          View help centre
          <%= heroicon "arrow-top-right-on-square", options: { class: "w-4 h-4" } %>
        <% end %>
      <% end %>
      <%= link_to "https://help.supportpages.io", target: "_blank", class: "inline-flex items-center gap-1.5 text-sm text-gray-500 hover:text-gray-700" do %>
        <%= heroicon "question-mark-circle", options: { class: "w-4 h-4" } %>
        Get Help
      <% end %>
      <span class="text-sm text-gray-600">
        <%= current_user.name || current_user.github_username %>
      </span>
      <%= button_to "Sign out", logout_path, method: :delete, class: "text-sm text-gray-500 hover:text-gray-700" %>
    </div>
  </div>
</header>
