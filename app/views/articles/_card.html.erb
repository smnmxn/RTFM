<%= tag.div id: dom_id(article), class: "p-4" do %>
  <div class="flex items-start justify-between">
    <div class="flex-1">
      <div class="flex items-center gap-2">
        <h4 class="text-lg font-medium app-text"><%= article.title %></h4>
        <% if article.generation_running? %>
<span class="inline-flex items-center gap-1 px-2 py-0.5 text-xs font-medium app-accent-light app-accent-on-light rounded">
            <%= spinner_icon(size: "w-3 h-3") %>
            Generating
          </span>
        <% elsif article.generation_failed? %>
          <span class="inline-flex items-center px-2 py-0.5 text-xs font-medium bg-red-100 text-red-800 rounded">Generation Failed</span>
        <% elsif article.generation_completed? %>
          <% if article.published? %>
            <span class="inline-flex items-center px-2 py-0.5 text-xs font-medium bg-green-100 text-green-800 rounded">Published</span>
          <% else %>
            <span class="inline-flex items-center px-2 py-0.5 text-xs font-medium bg-yellow-100 text-yellow-800 rounded">Draft</span>
          <% end %>
        <% end %>
      </div>
      <p class="mt-1 text-sm app-text-secondary">
        Created <%= time_ago_in_words(article.created_at) %> ago
        <% if article.recommendation&.source_update.present? %>
          &middot; From <%= link_to "PR ##{article.recommendation.source_update.pull_request_number}", article.recommendation.source_update.pull_request_url, target: "_blank", class: "app-accent-text hover:app-accent-hover" %>
        <% end %>
      </p>
    </div>
    <div class="ml-4 flex gap-2 items-center">
      <% if article.generation_completed? %>
        <%= link_to "View", project_article_path(article.project, article),
            class: "text-sm app-accent-text hover:app-accent-hover font-medium" %>
        <% if article.published? %>
          <%= button_to "Unpublish", unpublish_project_article_path(article.project, article),
              method: :post,
              class: "text-sm app-text-secondary hover:app-text font-medium cursor-pointer" %>
        <% else %>
          <%= button_to "Publish", publish_project_article_path(article.project, article),
              method: :post,
              class: "text-sm text-green-600 hover:text-green-800 font-medium cursor-pointer" %>
        <% end %>
      <% end %>
      <% if article.generation_failed? %>
        <%= button_to "Regenerate", regenerate_project_article_path(article.project, article),
            method: :post,
            class: "text-sm app-accent-text hover:app-accent-hover font-medium cursor-pointer" %>
      <% end %>
    </div>
  </div>

  <% if article.generation_completed? || article.generation_failed? %>
    <% if article.structured? && article.introduction.present? %>
      <p class="mt-4 app-text-secondary"><%= article.introduction %></p>
      <% if article.steps.any? %>
        <p class="mt-2 text-sm app-text-secondary"><%= article.steps.count %> steps</p>
      <% end %>
    <% else %>
      <div class="mt-4 prose prose-sm max-w-none app-text">
        <%= markdown(truncate(article.content, length: 500)) %>
      </div>
      <% if article.content.present? && article.content.length > 500 %>
        <p class="mt-2 text-sm app-text-secondary">...</p>
      <% end %>
    <% end %>
  <% elsif article.generation_running? %>
    <div class="mt-4 text-sm app-text-secondary italic">
      Article content is being generated. This may take a minute...
    </div>
  <% end %>
<% end %>
