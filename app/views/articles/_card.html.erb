<%= tag.div id: dom_id(article), class: "p-4" do %>
  <div class="flex items-start justify-between">
    <div class="flex-1">
      <div class="flex items-center gap-2">
        <h4 class="text-lg font-medium text-gray-900"><%= article.title %></h4>
        <% if article.generation_running? %>
          <span class="inline-flex items-center gap-1 px-2 py-0.5 text-xs font-medium bg-indigo-100 text-indigo-800 rounded">
            <svg class="w-3 h-3 animate-spin" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
              <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
              <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
            Generating
          </span>
        <% elsif article.generation_failed? %>
          <span class="inline-flex items-center px-2 py-0.5 text-xs font-medium bg-red-100 text-red-800 rounded">Generation Failed</span>
        <% elsif article.generation_completed? %>
          <% if article.published? %>
            <span class="inline-flex items-center px-2 py-0.5 text-xs font-medium bg-green-100 text-green-800 rounded">Published</span>
          <% else %>
            <span class="inline-flex items-center px-2 py-0.5 text-xs font-medium bg-yellow-100 text-yellow-800 rounded">Draft</span>
          <% end %>
        <% end %>
      </div>
      <p class="mt-1 text-sm text-gray-500">
        Created <%= time_ago_in_words(article.created_at) %> ago
        <% if article.recommendation&.source_update.present? %>
          &middot; From <%= link_to "PR ##{article.recommendation.source_update.pull_request_number}", article.recommendation.source_update.pull_request_url, target: "_blank", class: "text-indigo-600 hover:text-indigo-800" %>
        <% end %>
      </p>
    </div>
    <div class="ml-4 flex gap-2">
      <% if article.generation_completed? %>
        <%= link_to "View Article", project_article_path(article.project, article),
            class: "text-sm text-indigo-600 hover:text-indigo-800 font-medium" %>
      <% end %>
      <% if article.generation_failed? %>
        <%= button_to "Regenerate", regenerate_project_article_path(article.project, article),
            method: :post,
            class: "text-sm text-indigo-600 hover:text-indigo-800 font-medium cursor-pointer" %>
      <% end %>
    </div>
  </div>

  <% if article.generation_completed? || article.generation_failed? %>
    <% if article.structured? && article.introduction.present? %>
      <p class="mt-4 text-gray-700"><%= article.introduction %></p>
      <% if article.steps.any? %>
        <p class="mt-2 text-sm text-gray-500"><%= article.steps.count %> steps</p>
      <% end %>
    <% else %>
      <div class="mt-4 prose prose-sm max-w-none text-gray-700">
        <%= markdown(truncate(article.content, length: 500)) %>
      </div>
      <% if article.content.present? && article.content.length > 500 %>
        <p class="mt-2 text-sm text-gray-500">...</p>
      <% end %>
    <% end %>
  <% elsif article.generation_running? %>
    <div class="mt-4 text-sm text-gray-500 italic">
      Article content is being generated. This may take a minute...
    </div>
  <% end %>
<% end %>
