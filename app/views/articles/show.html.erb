<div class="min-h-screen bg-gray-50">
  <!-- Header -->
  <header class="bg-white shadow-sm">
    <div class="max-w-7xl mx-auto px-4 py-4 sm:px-6 lg:px-8 flex justify-between items-center">
      <h1 class="text-2xl font-bold text-gray-900">RTFM</h1>
      <div class="flex items-center gap-4">
        <%= link_to "Back to Project", project_path(@article.project), class: "text-indigo-600 hover:text-indigo-800" %>
      </div>
    </div>
  </header>

  <main class="max-w-4xl mx-auto px-4 py-8 sm:px-6 lg:px-8">
    <div class="bg-white shadow rounded-lg">
      <!-- Article Header -->
      <div class="px-6 py-4 border-b border-gray-200">
        <div class="flex items-start justify-between">
          <div>
            <h2 class="text-2xl font-semibold text-gray-900"><%= @article.title %></h2>
            <div class="mt-2 flex items-center gap-2">
              <% if @article.generation_running? %>
                <span class="inline-flex items-center gap-1 px-2 py-0.5 text-xs font-medium bg-indigo-100 text-indigo-800 rounded">
                  <svg class="w-3 h-3 animate-spin" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                  </svg>
                  Generating
                </span>
              <% elsif @article.generation_failed? %>
                <span class="inline-flex items-center px-2 py-0.5 text-xs font-medium bg-red-100 text-red-800 rounded">Generation Failed</span>
              <% elsif @article.generation_completed? %>
                <% if @article.published? %>
                  <span class="inline-flex items-center px-2 py-0.5 text-xs font-medium bg-green-100 text-green-800 rounded">Published</span>
                <% else %>
                  <span class="inline-flex items-center px-2 py-0.5 text-xs font-medium bg-yellow-100 text-yellow-800 rounded">Draft</span>
                <% end %>
              <% end %>
            </div>
            <p class="mt-2 text-sm text-gray-500">
              Created <%= time_ago_in_words(@article.created_at) %> ago
              <% if @article.recommendation&.source_update.present? %>
                &middot; From <%= link_to "PR ##{@article.recommendation.source_update.pull_request_number}", @article.recommendation.source_update.pull_request_url, target: "_blank", class: "text-indigo-600 hover:text-indigo-800" %>
              <% end %>
            </p>
          </div>
          <% if @article.generation_failed? || @article.generation_completed? %>
            <%= button_to "Regenerate", regenerate_project_article_path(@article.project, @article),
                method: :post,
                class: "px-4 py-2 bg-indigo-600 text-white text-sm font-medium rounded-md hover:bg-indigo-700 cursor-pointer" %>
          <% end %>
        </div>
      </div>

      <!-- Article Content -->
      <div class="px-6 py-6">
        <% if @article.generation_completed? || @article.generation_failed? %>
          <% if @article.structured? %>
            <!-- Structured Content Rendering (Editable) -->

            <!-- Introduction -->
            <%= render "articles/editable/introduction", article: @article %>

            <!-- Prerequisites -->
            <%= render "articles/editable/prerequisites", article: @article %>

            <!-- Steps -->
            <%= render "articles/editable/steps", article: @article %>

            <!-- Tips -->
            <%= render "articles/editable/tips", article: @article %>

            <!-- Summary -->
            <%= render "articles/editable/summary", article: @article %>

          <% else %>
            <!-- Fallback: Markdown Rendering -->
            <div class="prose prose-lg max-w-none">
              <%= markdown(@article.content) %>
            </div>
          <% end %>
        <% elsif @article.generation_running? %>
          <div class="text-center py-12">
            <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-indigo-600 mx-auto"></div>
            <p class="mt-4 text-gray-500">Article content is being generated. This may take a minute...</p>
          </div>
        <% end %>
      </div>
    </div>
  </main>
</div>
