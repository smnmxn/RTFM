<div class="app-bg">
  <%= render "shared/app_header", project: @article.project %>

  <main class="max-w-4xl mx-auto px-4 py-8 sm:px-6 lg:px-8">
    <div class="app-surface shadow rounded-lg">
      <!-- Article Header -->
      <%= turbo_frame_tag "article_header" do %>
        <%= render "articles/header", article: @article %>
      <% end %>

      <!-- Article Content -->
      <div class="px-6 py-6">
        <% if @article.generation_completed? || @article.generation_failed? %>
          <% if @article.structured? %>
            <!-- Structured Content Rendering (Editable) -->

            <!-- Introduction -->
            <%= render "articles/editable/introduction", article: @article %>

            <!-- Prerequisites -->
            <%= render "articles/editable/prerequisites", article: @article %>

            <!-- Steps -->
            <%= render "articles/editable/steps", article: @article %>

            <!-- Tips -->
            <%= render "articles/editable/tips", article: @article %>

            <!-- Summary -->
            <%= render "articles/editable/summary", article: @article %>

          <% else %>
            <!-- Fallback: Markdown Rendering -->
            <div class="prose prose-lg max-w-none">
              <%= markdown(@article.content) %>
            </div>
          <% end %>
        <% elsif @article.generation_running? %>
          <div class="text-center py-12">
            <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-[color:var(--app-accent)] mx-auto"></div>
            <p class="mt-4 app-text-secondary">Article content is being generated. This may take a minute...</p>
          </div>
        <% end %>
      </div>
    </div>
  </main>
</div>
