<%= turbo_stream.replace "#{@dom_prefix}_#{@article.id}_#{@field_section}" do %>
  <%= render "articles/editable/#{@field_section}", article: @article, dom_prefix: @dom_prefix %>
<% end %>

<% if @field_section == "title" %>
  <%= turbo_stream.replace "folder_article_#{@article.id}" do %>
    <%= render "projects/articles_folder_article", article: @article, project: @article.project, selected: true %>
  <% end %>
<% end %>
