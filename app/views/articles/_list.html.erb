<%= turbo_stream_from @project, :articles %>

<div class="app-surface shadow rounded-lg mb-6">
  <div class="px-6 py-4 border-b app-border">
    <h3 class="text-lg font-semibold app-text">Generated Articles</h3>
    <p class="mt-1 text-sm app-text-secondary">
      How-to guides generated from recommendations
    </p>
  </div>

  <div id="articles-list">
    <% if articles.any? %>
      <div class="divide-y app-border">
        <% articles.each do |article| %>
          <%= render "articles/card", article: article %>
        <% end %>
      </div>
    <% else %>
      <div class="p-6 text-center app-text-secondary">
        No articles generated yet. Click "Generate" on a recommendation to create one.
      </div>
    <% end %>
  </div>
</div>
