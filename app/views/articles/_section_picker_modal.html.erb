<% sections = article.project.sections.visible.ordered %>
<div data-controller="section-picker-modal">

  <!-- Trigger Button -->
  <button type="button"
          data-action="section-picker-modal#open"
          class="px-4 py-1.5 text-sm bg-green-600 text-white font-medium rounded-lg hover:bg-green-700 cursor-pointer">
    Approve
  </button>

  <!-- Backdrop -->
  <div data-section-picker-modal-target="backdrop"
       data-action="click->section-picker-modal#close"
       class="hidden fixed inset-0 z-40"
       style="background-color: rgba(0, 0, 0, 0.5);">
  </div>

  <!-- Modal Dialog -->
  <div data-section-picker-modal-target="dialog"
       class="hidden fixed inset-0 z-50">
    <div class="flex min-h-full items-center justify-center p-4">
      <div class="relative w-full max-w-md app-surface rounded-lg shadow-xl border app-border"
           data-action="click->section-picker-modal#stopPropagation">

        <!-- Header -->
        <div class="px-6 py-4 border-b app-border">
          <div class="flex items-center justify-between">
            <h3 class="text-lg font-semibold app-text">
              Choose a Section
            </h3>
            <button type="button"
                    data-action="section-picker-modal#close"
                    class="app-text-muted hover:app-text-secondary">
              <%= heroicon "x-mark", options: { class: "h-5 w-5" } %>
            </button>
          </div>
          <p class="mt-1 text-sm app-text-secondary">
            Select which section this article belongs to.
          </p>
        </div>

        <!-- Form submits as turbo_stream natively -->
        <%= form_with url: approve_article_project_path(article.project, article_id: article.id),
                      method: :post,
                      data: { turbo_stream: true } do |f| %>
          <!-- Content -->
          <div class="px-6 py-4">
            <label for="section-select-<%= article.id %>" class="block text-sm font-medium app-text-secondary mb-2">
              Section
            </label>
            <select name="section_id"
                    id="section-select-<%= article.id %>"
                    class="w-full px-3 py-2 text-sm border app-border-strong rounded-lg focus:outline-none app-focus-ring">
              <option value="">Uncategorized</option>
              <% sections.each do |section| %>
                <option value="<%= section.id %>"><%= section.name %></option>
              <% end %>
            </select>
          </div>

          <!-- Footer -->
          <div class="px-6 py-4 app-bg border-t app-border rounded-b-lg flex justify-end gap-3">
            <button type="button"
                    data-action="section-picker-modal#close"
                    class="px-4 py-2 text-sm font-medium app-text-secondary app-surface border app-border-strong rounded-lg hover:app-surface-alt">
              Cancel
            </button>
            <%= f.submit "Approve",
                class: "px-4 py-2 text-sm font-medium text-white bg-green-600 rounded-lg hover:bg-green-700 disabled:opacity-50 cursor-pointer" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
