<% sections = article.project.sections.visible.ordered %>
<div data-controller="section-picker-modal"
     data-section-picker-modal-url-value="<%= approve_article_project_path(article.project, article_id: article.id) %>">

  <!-- Trigger Button -->
  <button type="button"
          data-action="section-picker-modal#open"
          class="px-4 py-1.5 text-sm bg-green-600 text-white font-medium rounded-lg hover:bg-green-700 cursor-pointer">
    Approve
  </button>

  <!-- Backdrop -->
  <div data-section-picker-modal-target="backdrop"
       data-action="click->section-picker-modal#close"
       class="hidden fixed inset-0 z-40"
       style="background-color: rgba(0, 0, 0, 0.5);">
  </div>

  <!-- Modal Dialog -->
  <div data-section-picker-modal-target="dialog"
       class="hidden fixed inset-0 z-50">
    <div class="flex min-h-full items-center justify-center p-4">
      <div class="relative w-full max-w-md bg-white rounded-lg shadow-xl border border-gray-200"
           data-action="click->section-picker-modal#stopPropagation">

        <!-- Header -->
        <div class="px-6 py-4 border-b border-gray-200">
          <div class="flex items-center justify-between">
            <h3 class="text-lg font-semibold text-gray-900">
              Choose a Section
            </h3>
            <button type="button"
                    data-action="section-picker-modal#close"
                    class="text-gray-400 hover:text-gray-600">
              <%= heroicon "x-mark", options: { class: "h-5 w-5" } %>
            </button>
          </div>
          <p class="mt-1 text-sm text-gray-500">
            Select which section this article belongs to.
          </p>
        </div>

        <!-- Content -->
        <div class="px-6 py-4">
          <label for="section-select-<%= article.id %>" class="block text-sm font-medium text-gray-700 mb-2">
            Section
          </label>
          <select id="section-select-<%= article.id %>"
                  data-section-picker-modal-target="select"
                  class="w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500">
            <option value="">Uncategorized</option>
            <% sections.each do |section| %>
              <option value="<%= section.id %>"><%= section.name %></option>
            <% end %>
          </select>
        </div>

        <!-- Footer -->
        <div class="px-6 py-4 bg-gray-50 border-t border-gray-200 rounded-b-lg flex justify-end gap-3">
          <button type="button"
                  data-action="section-picker-modal#close"
                  class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50">
            Cancel
          </button>
          <button type="button"
                  data-action="section-picker-modal#submit"
                  data-section-picker-modal-target="submitButton"
                  class="px-4 py-2 text-sm font-medium text-white bg-green-600 rounded-lg hover:bg-green-700 disabled:opacity-50">
            Approve
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
