<div data-controller="new-article-modal"
     data-new-article-modal-url-value="<%= create_article_project_articles_path(project) %>">

  <!-- Trigger Button -->
  <button type="button"
          data-action="new-article-modal#open"
          class="inline-flex items-center gap-1.5 px-3 py-1.5 text-sm font-medium text-white app-accent-bg rounded-lg hover:app-accent-bg">
    <%= heroicon "plus", options: { class: "w-4 h-4" } %>
    New Article
  </button>

  <!-- Backdrop -->
  <div data-new-article-modal-target="backdrop"
       data-action="click->new-article-modal#close"
       class="hidden fixed inset-0 z-40"
       style="background-color: rgba(0, 0, 0, 0.5);">
  </div>

  <!-- Modal Dialog -->
  <div data-new-article-modal-target="dialog"
       class="hidden fixed inset-0 z-50">
    <div class="flex min-h-full items-center justify-center p-4">
      <div class="relative w-full max-w-lg app-surface rounded-lg shadow-xl border app-border"
           data-action="click->new-article-modal#stopPropagation">

        <!-- Header -->
        <div class="px-6 py-4 border-b app-border">
          <div class="flex items-center justify-between">
            <h3 class="text-lg font-semibold app-text">
              New Article
            </h3>
            <button type="button"
                    data-action="new-article-modal#close"
                    class="app-text-muted hover:app-text-secondary">
              <%= heroicon "x-mark", options: { class: "h-5 w-5" } %>
            </button>
          </div>
          <p class="mt-1 text-sm app-text-secondary">
            Create a blank article. You can write content manually or use AI to generate it.
          </p>
        </div>

        <!-- Content -->
        <div class="px-6 py-4 space-y-4">
          <!-- Title (required) -->
          <div>
            <label for="new-article-title" class="block text-sm font-medium app-text-secondary mb-1">
              Title <span class="text-red-500">*</span>
            </label>
            <input type="text"
                   id="new-article-title"
                   data-new-article-modal-target="title"
                   class="w-full px-3 py-2 text-sm border app-border-strong rounded-lg focus:outline-none app-focus-ring"
                   placeholder="e.g. How to export data as CSV">
          </div>

          <!-- Description (optional, for AI context) -->
          <div>
            <label for="new-article-description" class="block text-sm font-medium app-text-secondary mb-1">
              Description
            </label>
            <textarea id="new-article-description"
                      data-new-article-modal-target="description"
                      rows="3"
                      class="w-full px-3 py-2 text-sm border app-border-strong rounded-lg focus:outline-none app-focus-ring"
                      placeholder="Optional: Describe what this article should cover. Used if you later generate content with AI."></textarea>
          </div>

          <!-- Section (optional) -->
          <div>
            <label for="new-article-section" class="block text-sm font-medium app-text-secondary mb-1">
              Section
            </label>
            <select id="new-article-section"
                    data-new-article-modal-target="section"
                    class="w-full px-3 py-2 text-sm border app-border-strong rounded-lg focus:outline-none app-focus-ring">
              <option value="">Uncategorized</option>
              <% project.sections.visible.ordered.each do |section| %>
                <option value="<%= section.id %>"><%= section.name %></option>
              <% end %>
            </select>
          </div>
        </div>

        <!-- Footer -->
        <div class="px-6 py-4 app-bg border-t app-border rounded-b-lg flex justify-end gap-3">
          <button type="button"
                  data-action="new-article-modal#close"
                  class="px-4 py-2 text-sm font-medium app-text-secondary app-surface border app-border-strong rounded-lg hover:app-surface-alt">
            Cancel
          </button>
          <button type="button"
                  data-action="new-article-modal#submit"
                  data-new-article-modal-target="submitButton"
                  class="px-4 py-2 text-sm font-medium text-white app-accent-bg rounded-lg hover:app-accent-bg disabled:opacity-50">
            Create Article
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
