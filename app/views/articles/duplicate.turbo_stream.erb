<%# Update articles tab badge %>
<%= turbo_stream.replace "articles-tab-badge" do %>
  <%= render "projects/articles_tab_badge", project: @new_article.project %>
<% end %>

<%# Replace entire folder tree to refresh counts and article positions %>
<%= turbo_stream.replace "articles-folder-tree" do %>
  <%= render "projects/articles_folder_tree",
      sections: @new_article.project.sections.visible.ordered,
      uncategorized_articles: @new_article.project.articles.for_folder_tree.where(section: nil).ordered,
      project: @new_article.project,
      selected_article_id: @new_article.id %>
<% end %>

<%# Update editor to show the new duplicate %>
<%= turbo_stream.replace "articles-editor-frame" do %>
  <%= render "projects/articles_editor",
      article: @new_article,
      project: @new_article.project,
      sections: @new_article.project.sections.visible.ordered %>
<% end %>
