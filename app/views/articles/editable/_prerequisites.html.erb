<%= turbo_frame_tag "article_prerequisites" do %>
  <div data-controller="array-edit"
       data-array-edit-url-value="<%= project_article_path(article.project, article) %>"
       data-array-edit-field-value="prerequisites"
       class="mb-8">

    <h3 class="text-lg font-semibold text-gray-900 mb-3 flex items-center gap-2">
      <svg class="w-5 h-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"></path>
      </svg>
      Prerequisites
    </h3>

    <ul data-array-edit-target="list" class="space-y-2">
      <% article.prerequisites.each_with_index do |prereq, index| %>
        <%= render "articles/editable/prerequisite_item", article: article, prereq: prereq, index: index %>
      <% end %>
    </ul>

    <!-- Add Button -->
    <button type="button"
            data-action="click->array-edit#add"
            class="mt-3 inline-flex items-center gap-1 text-sm text-indigo-600 hover:text-indigo-800 cursor-pointer">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
      </svg>
      Add prerequisite
    </button>
  </div>
<% end %>
