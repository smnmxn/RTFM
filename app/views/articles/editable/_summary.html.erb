<% dom_prefix = local_assigns[:dom_prefix] || "article" %>
<%= tag.div id: "#{dom_prefix}_#{article.id}_summary" do %>
  <% if article.summary.present? %>
    <div data-controller="inline-edit"
         data-inline-edit-url-value="<%= update_field_project_article_path(article.project, article, dom_prefix: dom_prefix) %>"
         data-inline-edit-field-value="summary"
         class="border-t app-border pt-6 group relative">

      <!-- Display Mode -->
      <p data-inline-edit-target="display"
         data-action="click->inline-edit#edit"
         class="editable-field app-text italic cursor-pointer rounded px-2 py-1 -mx-2 -my-1">
        <%= article.summary %>
        <span class="invisible group-hover:visible app-text-muted text-sm ml-2 not-italic">Click to edit</span>
      </p>

      <!-- Edit Mode -->
      <div data-inline-edit-target="form" class="hidden">
        <textarea data-inline-edit-target="input"
                  data-action="blur->inline-edit#save keydown->inline-edit#handleKeydown"
                  class="w-full app-inline-input rounded px-2 py-1"
                  rows="2"><%= article.summary %></textarea>
        <p class="text-xs app-text-secondary mt-1">Press Enter to save, Escape to cancel</p>
      </div>

      <!-- Saving Indicator -->
      <div data-inline-edit-target="saving" class="hidden absolute top-0 right-0">
        <span class="text-xs app-accent-text">Saving...</span>
      </div>
    </div>
  <% end %>
<% end %>
