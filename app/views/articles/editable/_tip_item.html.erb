<li class="flex items-start gap-2 text-amber-900 group"
    data-controller="inline-edit"
    data-inline-edit-url-value="<%= update_field_project_article_path(article.project, article) %>"
    data-inline-edit-field-value="tips.<%= index %>">

  <span class="text-amber-600 mt-1 flex-shrink-0">&bull;</span>

  <!-- Display Mode -->
  <span data-inline-edit-target="display"
        data-action="click->inline-edit#edit"
        class="flex-1 cursor-pointer hover:bg-amber-100 rounded px-1 -mx-1 transition-colors">
    <%= tip %>
  </span>

  <!-- Edit Mode -->
  <div data-inline-edit-target="form" class="hidden flex-1">
    <input type="text"
           data-inline-edit-target="input"
           data-action="blur->inline-edit#save keydown->inline-edit#handleKeydown"
           value="<%= tip %>"
           class="w-full border border-amber-500 rounded px-2 py-0.5 focus:outline-none focus:ring-2 focus:ring-amber-500">
  </div>

  <!-- Delete Button -->
  <button type="button"
          data-action="click->array-edit#remove"
          data-array-edit-index-param="<%= index %>"
          class="invisible group-hover:visible text-red-400 hover:text-red-600 p-1 cursor-pointer">
<%= heroicon "trash", options: { class: "w-4 h-4" } %>
  </button>
</li>
