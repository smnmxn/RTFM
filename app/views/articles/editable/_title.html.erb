<% dom_prefix = local_assigns[:dom_prefix] || "article" %>
<div id="<%= dom_prefix %>_<%= article.id %>_title"
     data-controller="inline-edit"
     data-inline-edit-url-value="<%= update_field_project_article_path(article.project, article, dom_prefix: dom_prefix) %>"
     data-inline-edit-field-value="title"
     class="group">
  <!-- Display Mode -->
  <div data-inline-edit-target="display"
       data-action="click->inline-edit#edit"
       class="editable-field cursor-pointer rounded px-1 -mx-1">
    <h3 class="text-lg font-medium app-text inline">
      <%= article.title %>
    </h3>
    <span class="invisible group-hover:visible app-text-muted text-xs ml-1">Click to edit</span>
  </div>
  <!-- Edit Mode -->
  <div data-inline-edit-target="form" class="hidden">
    <input type="text"
           data-inline-edit-target="input"
           data-action="blur->inline-edit#save keydown->inline-edit#handleKeydown"
           value="<%= article.title %>"
           class="text-lg font-medium w-full app-inline-input rounded px-2 py-0.5">
  </div>
</div>
