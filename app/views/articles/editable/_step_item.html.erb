<% dom_prefix = local_assigns[:dom_prefix] || "article" %>
<div class="border app-border rounded-lg p-4 group relative"
     data-controller="array-edit"
     data-array-edit-url-value="<%= project_article_path(article.project, article) %>"
     data-array-edit-field-value="steps">

  <div class="flex items-start gap-3">
    <!-- Drag Handle -->
    <button type="button" data-drag-handle class="flex-shrink-0 cursor-grab active:cursor-grabbing app-text-muted hover:app-text-secondary mt-1.5">
      <%= heroicon "bars-2", options: { class: "w-5 h-5" } %>
    </button>

    <!-- Step Number Badge -->
    <span class="flex-shrink-0 w-8 h-8 app-accent-bg text-white rounded-full flex items-center justify-center font-semibold text-sm">
      <%= index + 1 %>
    </span>

    <div class="flex-1">
      <!-- Step Title (editable) -->
      <div data-controller="inline-edit"
           data-inline-edit-url-value="<%= update_field_project_article_path(article.project, article, dom_prefix: dom_prefix) %>"
           data-inline-edit-field-value="steps.<%= index %>.title"
           class="mb-2">

        <h4 data-inline-edit-target="display"
            data-action="click->inline-edit#edit"
            class="editable-field font-medium app-text cursor-pointer rounded px-1 -mx-1">
          <%= step["title"] %>
        </h4>

        <div data-inline-edit-target="form" class="hidden">
          <input type="text"
                 data-inline-edit-target="input"
                 data-action="blur->inline-edit#save keydown->inline-edit#handleKeydown"
                 value="<%= step["title"] %>"
                 class="w-full font-medium app-inline-input rounded px-2 py-0.5">
        </div>
      </div>

      <!-- Step Content (editable) -->
      <div data-controller="inline-edit"
           data-inline-edit-url-value="<%= update_field_project_article_path(article.project, article, dom_prefix: dom_prefix) %>"
           data-inline-edit-field-value="steps.<%= index %>.content">

        <div data-inline-edit-target="display"
             data-action="click->inline-edit#edit"
             class="editable-field app-text prose prose-sm max-w-none cursor-pointer rounded px-1 -mx-1">
          <%= markdown(step["content"]) %>
        </div>

        <div data-inline-edit-target="form" class="hidden">
          <textarea data-inline-edit-target="input"
                    data-action="blur->inline-edit#save keydown->inline-edit#handleKeydown"
                    rows="3"
                    class="w-full app-inline-input rounded px-2 py-1"><%= step["content"] %></textarea>
        </div>
      </div>

      <!-- Step Image -->
      <%= render "articles/editable/step_image", article: article, index: index, dom_prefix: dom_prefix %>
    </div>

    <!-- Delete Step Button -->
    <%= button_to remove_array_item_project_article_path(article.project, article, field: "steps", index: index, dom_prefix: dom_prefix),
        method: :delete,
        form: { data: { turbo_stream: true, turbo_confirm: "Are you sure you want to delete this step?" } },
        class: "invisible group-hover:visible text-red-400 hover:text-red-600 p-1 absolute top-2 right-2 cursor-pointer" do %>
      <%= heroicon "trash", options: { class: "w-5 h-5" } %>
    <% end %>
  </div>
</div>
