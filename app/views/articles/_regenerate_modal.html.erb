<% button_label = local_assigns[:label].presence || "Regenerate" %>
<% is_generate = button_label == "Generate" %>
<div data-controller="regenerate-modal"
     data-regenerate-modal-url-value="<%= regenerate_project_article_path(article.project, article) %>"
     data-regenerate-modal-label-value="<%= button_label %>">

  <!-- Trigger Button -->
  <button type="button"
          data-action="regenerate-modal#open"
          class="<%= button_classes %>">
    <% if local_assigns[:show_icon] %>
      <%= heroicon is_generate ? "sparkles" : "arrow-path", options: { class: "w-4 h-4" } %>
    <% end %>
    <%= button_label %>
  </button>

  <!-- Backdrop -->
  <div data-regenerate-modal-target="backdrop"
       data-action="click->regenerate-modal#close"
       class="hidden fixed inset-0 z-40"
       style="background-color: rgba(0, 0, 0, 0.5);">
  </div>

  <!-- Modal Dialog -->
  <div data-regenerate-modal-target="dialog"
       class="hidden fixed inset-0 z-50">
    <div class="flex min-h-full items-center justify-center p-4">
      <div class="relative w-full max-w-md app-surface rounded-lg shadow-xl border app-border"
           data-action="click->regenerate-modal#stopPropagation">

        <!-- Header -->
        <div class="px-6 py-4 border-b app-border">
          <div class="flex items-center justify-between">
            <h3 class="text-lg font-semibold app-text">
              <%= button_label %> Article
            </h3>
            <button type="button"
                    data-action="regenerate-modal#close"
                    class="app-text-muted hover:app-text-secondary">
              <%= heroicon "x-mark", options: { class: "h-5 w-5" } %>
            </button>
          </div>
          <p class="mt-1 text-sm app-text-secondary">
            <% if is_generate %>
              Provide guidance to help AI generate your article content.
            <% else %>
              Optionally provide guidance to steer the regeneration.
            <% end %>
          </p>
        </div>

        <!-- Content -->
        <div class="px-6 py-4">
          <label for="regeneration-guidance-<%= article.id %>" class="block text-sm font-medium app-text-secondary mb-2">
            Guidance
          </label>
          <textarea id="regeneration-guidance-<%= article.id %>"
                    data-regenerate-modal-target="textarea"
                    rows="4"
                    class="w-full px-3 py-2 text-sm border app-border-strong rounded-lg focus:outline-none app-focus-ring"
                    placeholder="e.g. Make the tone friendlier, focus on mobile workflow, add a step about notifications..."></textarea>
        </div>

        <!-- Footer -->
        <div class="px-6 py-4 app-bg border-t app-border rounded-b-lg flex justify-end gap-3">
          <button type="button"
                  data-action="regenerate-modal#close"
                  class="px-4 py-2 text-sm font-medium app-text-secondary app-surface border app-border-strong rounded-lg hover:app-surface-alt">
            Cancel
          </button>
          <button type="button"
                  data-action="regenerate-modal#submit"
                  data-regenerate-modal-target="submitButton"
                  class="px-4 py-2 text-sm font-medium text-white app-accent-bg rounded-lg hover:app-accent-bg disabled:opacity-50">
            <%= button_label %>
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
