<div data-controller="regenerate-modal"
     data-regenerate-modal-url-value="<%= regenerate_project_article_path(article.project, article) %>">

  <!-- Trigger Button -->
  <button type="button"
          data-action="regenerate-modal#open"
          class="<%= button_classes %>">
    <% if defined?(show_icon) && show_icon %>
      <%= heroicon "arrow-path", options: { class: "w-4 h-4" } %>
    <% end %>
    Regenerate
  </button>

  <!-- Backdrop -->
  <div data-regenerate-modal-target="backdrop"
       data-action="click->regenerate-modal#close"
       class="hidden fixed inset-0 z-40"
       style="background-color: rgba(0, 0, 0, 0.5);">
  </div>

  <!-- Modal Dialog -->
  <div data-regenerate-modal-target="dialog"
       class="hidden fixed inset-0 z-50">
    <div class="flex min-h-full items-center justify-center p-4">
      <div class="relative w-full max-w-md bg-white rounded-lg shadow-xl border border-gray-200"
           data-action="click->regenerate-modal#stopPropagation">

        <!-- Header -->
        <div class="px-6 py-4 border-b border-gray-200">
          <div class="flex items-center justify-between">
            <h3 class="text-lg font-semibold text-gray-900">
              Regenerate Article
            </h3>
            <button type="button"
                    data-action="regenerate-modal#close"
                    class="text-gray-400 hover:text-gray-600">
              <%= heroicon "x-mark", options: { class: "h-5 w-5" } %>
            </button>
          </div>
          <p class="mt-1 text-sm text-gray-500">
            Optionally provide guidance to steer the regeneration.
          </p>
        </div>

        <!-- Content -->
        <div class="px-6 py-4">
          <label for="regeneration-guidance-<%= article.id %>" class="block text-sm font-medium text-gray-700 mb-2">
            Guidance
          </label>
          <textarea id="regeneration-guidance-<%= article.id %>"
                    data-regenerate-modal-target="textarea"
                    rows="4"
                    class="w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"
                    placeholder="e.g. Make the tone friendlier, focus on mobile workflow, add a step about notifications..."></textarea>
        </div>

        <!-- Footer -->
        <div class="px-6 py-4 bg-gray-50 border-t border-gray-200 rounded-b-lg flex justify-end gap-3">
          <button type="button"
                  data-action="regenerate-modal#close"
                  class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50">
            Cancel
          </button>
          <button type="button"
                  data-action="regenerate-modal#submit"
                  data-regenerate-modal-target="submitButton"
                  class="px-4 py-2 text-sm font-medium text-white bg-indigo-600 rounded-lg hover:bg-indigo-700 disabled:opacity-50">
            Regenerate
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
