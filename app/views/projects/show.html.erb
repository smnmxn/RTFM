<%= turbo_stream_from @project, :articles %>
<%= turbo_stream_from @project, :recommendations %>
<%= turbo_stream_from @project, :inbox %>
<%= turbo_stream_from @project, :code_history %>
<%= turbo_stream_from @project, :notifications %>

<div class="min-h-screen bg-gray-50">
  <!-- Header -->
  <header class="bg-white shadow-sm">
    <div class="max-w-7xl mx-auto px-4 py-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center">
        <div class="flex items-center gap-4">
          <%= link_to projects_path, class: "hover:opacity-80 transition-opacity" do %>
            <%= image_tag "logo.png", class: "h-12", alt: "supportpages.io" %>
          <% end %>
          <h1 class="text-2xl font-bold text-gray-900"><%= @project.name %></h1>
          <%= link_to @project.github_repo, "https://github.com/#{@project.github_repo}", target: "_blank", class: "text-sm text-gray-500 hover:text-indigo-600" %>
        </div>
        <div class="flex items-center gap-4">
          <%= link_to project_help_centre_url(@project), target: "_blank", class: "inline-flex items-center gap-1.5 px-3 py-1.5 text-sm text-indigo-600 hover:text-indigo-800 font-medium" do %>
            View your help centre
            <%= heroicon "arrow-top-right-on-square", options: { class: "w-4 h-4" } %>
          <% end %>
          <%= link_to "https://help.supportpages.io", target: "_blank", class: "inline-flex items-center gap-1.5 text-sm text-gray-500 hover:text-gray-700" do %>
            <%= heroicon "question-mark-circle", options: { class: "w-4 h-4" } %>
            Get Help
          <% end %>
          <%= link_to "Projects", projects_path, class: "text-sm text-gray-500 hover:text-gray-700" %>
        </div>
      </div>
    </div>
  </header>

  <!-- Docs Behind Banner -->
  <%= render "projects/docs_behind_banner", project: @project %>

  <main class="max-w-7xl mx-auto px-4 py-6 sm:px-6 lg:px-8">
    <div class="bg-white shadow rounded-lg overflow-hidden flex flex-col" style="height: calc(100vh - 160px); min-height: 500px;"
         data-controller="tabs"
         data-tabs-active-value="<%= @active_tab %>"
         data-tabs-hash-value="true">

      <!-- Tab Navigation -->
      <div class="border-b border-gray-200 px-6 flex-shrink-0">
        <nav class="-mb-px flex" aria-label="Tabs">
          <div class="flex space-x-8">
            <button type="button"
                    data-tabs-target="tab"
                    data-tabs-name="inbox"
                    data-action="click->tabs#switch"
                    class="border-indigo-500 text-indigo-600 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm">
              Inbox
              <% pending_count = @pending_recommendations.count + @inbox_articles.where(generation_status: :generation_completed).count %>
              <% if pending_count > 0 %>
                <span class="ml-2 bg-indigo-100 text-indigo-600 py-0.5 px-2 rounded-full text-xs">
                  <%= pending_count %>
                </span>
              <% end %>
            </button>
            <button type="button"
                    data-tabs-target="tab"
                    data-tabs-name="articles"
                    data-action="click->tabs#switch"
                    class="border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm">
              Articles
              <% if @total_published_articles > 0 %>
                <span class="ml-2 bg-gray-100 text-gray-600 py-0.5 px-2 rounded-full text-xs">
                  <%= @total_published_articles %>
                </span>
              <% end %>
            </button>
          </div>
          <div class="flex-1"></div>
          <div class="flex space-x-8">
            <button type="button"
                    data-tabs-target="tab"
                    data-tabs-name="code-history"
                    data-action="click->tabs#switch"
                    class="border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm">
              Code History
            </button>
            <button type="button"
                    data-tabs-target="tab"
                    data-tabs-name="settings"
                    data-action="click->tabs#switch"
                    class="border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm">
              Settings
            </button>
          </div>
        </nav>
      </div>

      <!-- Inbox Panel -->
      <div data-tabs-target="panel" data-tabs-name="inbox" class="flex-1 flex flex-col overflow-hidden">
        <%= render "projects/inbox_panel",
            project: @project,
            pending_recommendations: @pending_recommendations,
            inbox_articles: @inbox_articles,
            selected_article: @selected_article,
            selected_recommendation: @selected_recommendation,
            inbox_empty: @inbox_empty %>
      </div>

      <!-- Code History Panel -->
      <div data-tabs-target="panel" data-tabs-name="code-history" class="hidden flex-1 flex flex-col overflow-hidden">
        <%= render "projects/code_history_panel", project: @project %>
      </div>

      <!-- Articles Panel -->
      <div data-tabs-target="panel" data-tabs-name="articles" class="hidden flex-1 flex flex-col overflow-hidden">
        <%= render "projects/articles_panel",
            project: @project,
            sections: @articles_sections,
            uncategorized_count: @uncategorized_articles_count,
            preselected_article: @preselected_article,
            preselected_section: @preselected_section %>
      </div>

      <!-- Settings Panel -->
      <div data-tabs-target="panel" data-tabs-name="settings" class="hidden flex-1 flex flex-col overflow-hidden">
        <%= render "projects/settings_panel", project: @project %>
      </div>
    </div>
  </main>
</div>
