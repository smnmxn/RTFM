<%# Update articles section (update count, or render empty wrapper if no articles) %>
<%= turbo_stream.replace "articles-section" do %>
  <%= render "projects/inbox_articles_section",
      inbox_articles: @inbox_articles,
      next_item: @next_item %>
<% end %>

<%# Update recommendations section to show selection %>
<%= turbo_stream.replace "recommendations-section" do %>
  <div id="recommendations-section">
    <% if @pending_recommendations.any? %>
      <div class="px-4 py-2 bg-gray-100 text-xs font-semibold text-gray-600 uppercase tracking-wide sticky top-0">
        Suggestions (<%= @pending_recommendations.count %>)
      </div>
      <div id="recommendations-list" class="divide-y divide-gray-200">
        <% @pending_recommendations.each do |recommendation| %>
          <%= render "projects/recommendation_row",
              recommendation: recommendation,
              selected: @next_item == recommendation %>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>

<%# Update editor to show next item %>
<% if @inbox_empty %>
  <%= turbo_stream.replace "inbox-editor" do %>
    <%= render "projects/all_reviewed", project: @project %>
  <% end %>
<% elsif @next_item.is_a?(Recommendation) %>
  <%= turbo_stream.replace "inbox-editor" do %>
    <%= render "projects/recommendation_editor", recommendation: @next_item %>
  <% end %>
<% elsif @next_item.is_a?(Article) %>
  <%= turbo_stream.replace "inbox-editor" do %>
    <%= render "projects/article_editor", article: @next_item %>
  <% end %>
  <%# Article row selection is already handled in the articles-section replacement above %>
<% else %>
  <%# No selectable item (all articles generating), show placeholder %>
  <%= turbo_stream.replace "inbox-editor" do %>
    <%= turbo_frame_tag "inbox-editor", class: "h-full block" do %>
      <div class="h-full flex items-center justify-center bg-white">
        <div class="text-center px-6">
          <%= heroicon "document-text", options: { class: "mx-auto h-16 w-16 text-gray-300" } %>
          <h3 class="mt-4 text-lg font-medium text-gray-900">Articles generating...</h3>
          <p class="mt-2 text-sm text-gray-500">
            Your articles are being generated. They'll appear here when ready.
          </p>
        </div>
      </div>
    <% end %>
  <% end %>
<% end %>

<%# Update progress %>
<%= turbo_stream.replace "inbox-progress" do %>
  <%= render "projects/inbox_progress", project: @project %>
<% end %>

<%# Update tab badge %>
<%= turbo_stream.replace "inbox-tab-badge" do %>
  <%= render "projects/inbox_tab_badge", project: @project %>
<% end %>

<%# Update articles tab badge %>
<%= turbo_stream.replace "articles-tab-badge" do %>
  <%= render "projects/articles_tab_badge", project: @project %>
<% end %>

<%# Update folder tree (article is now approved and visible there) %>
<%= turbo_stream.replace "articles-folder-tree" do %>
  <%= render "projects/articles_folder_tree",
      sections: @project.sections.visible.ordered,
      uncategorized_articles: @project.articles.for_folder_tree.where(section: nil).ordered,
      project: @project,
      selected_article_id: nil %>
<% end %>
