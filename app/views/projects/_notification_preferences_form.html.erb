<%# locals: (project:, user:, saved: false) %>
<% prefs = user.effective_notification_preferences %>

<div id="notification-preferences-form"
     data-controller="email-preview-modal"
     data-email-preview-modal-url-value="<%= preview_notification_email_project_path(project) %>">

  <div class="border app-border rounded-lg">
    <div class="px-4 py-3 app-bg border-b app-border rounded-t-lg">
      <h3 class="text-lg font-medium app-text">Email Notifications</h3>
      <p class="text-sm app-text-secondary mt-1">Get emailed when background tasks finish and you're not online.</p>
    </div>

    <%= form_with url: update_notification_preferences_project_path(project), method: :patch, class: "divide-y divide-app-border" do |f| %>
      <!-- Master toggle -->
      <div class="p-4">
        <label class="flex items-start gap-3 cursor-pointer">
          <input type="hidden" name="email_notifications_enabled" value="0">
          <input type="checkbox" name="email_notifications_enabled" value="1"
                 <%= "checked" if prefs["email_notifications_enabled"] %>
                 class="mt-0.5 h-4 w-4 rounded app-border-strong text-[color:var(--app-accent)] focus:ring-[color:var(--app-focus-ring)]">
          <div>
            <span class="block text-sm font-medium app-text">Enable email notifications</span>
            <span class="block text-sm app-text-secondary mt-0.5">Receive a digest email when all running tasks for this project complete.</span>
          </div>
        </label>
      </div>

      <!-- Per-event toggles -->
      <div class="p-4 space-y-3">
        <label class="block text-sm font-medium app-text">Notify me about</label>

        <% [
          ["analysis_complete",         "Repository analysis",      "Codebase scanned for structure, tech stack, and patterns"],
          ["sections_suggested",        "Section suggestions",      "Documentation sections proposed from codebase analysis"],
          ["recommendations_generated", "Article recommendations",  "New article ideas created for your sections"],
          ["article_generated",         "Article generation",       "A help article has been written and is ready for review"],
          ["pr_analyzed",               "Pull request analysis",    "A merged PR analyzed for documentation impact"],
          ["commit_analyzed",           "Commit analysis",          "A commit analyzed for changes that may need documenting"],
        ].each do |event, label, description| %>
          <div class="flex items-start gap-3 p-3 rounded-lg border app-border hover:app-surface-alt transition-colors">
            <label class="flex items-start gap-3 cursor-pointer flex-1">
              <input type="hidden" name="email_events[<%= event %>]" value="0">
              <input type="checkbox" name="email_events[<%= event %>]" value="1"
                     <%= "checked" if prefs.dig("email_events", event) != false %>
                     class="mt-0.5 h-4 w-4 rounded app-border-strong text-[color:var(--app-accent)] focus:ring-[color:var(--app-focus-ring)]">
              <div>
                <span class="block text-sm font-medium app-text"><%= label %></span>
                <span class="block text-sm app-text-secondary mt-0.5"><%= description %></span>
              </div>
            </label>
            <button type="button"
                    data-action="email-preview-modal#open"
                    data-event-type="<%= event %>"
                    data-event-label="<%= label %>"
                    class="shrink-0 mt-0.5 text-xs app-accent-text hover:app-accent-text font-medium">
              Preview
            </button>
          </div>
        <% end %>
      </div>

      <!-- Submit -->
      <div class="p-4 app-bg rounded-b-lg flex items-center justify-between">
        <% if saved %>
          <span class="text-sm text-green-600 flex items-center gap-1">
            <%= heroicon "check-circle", options: { class: "w-4 h-4" } %>
            Saved
          </span>
        <% else %>
          <span></span>
        <% end %>
        <%= f.submit "Save Email Preferences",
            class: "px-4 py-2 app-accent-bg text-white rounded-lg hover:app-accent-bg transition-colors text-sm font-medium cursor-pointer" %>
      </div>
    <% end %>
  </div>

  <!-- Email Preview Modal -->
  <div data-email-preview-modal-target="backdrop"
       data-action="click->email-preview-modal#close"
       class="hidden fixed inset-0 z-40"
       style="background-color: rgba(0, 0, 0, 0.5);">
  </div>

  <div data-email-preview-modal-target="dialog"
       class="hidden fixed inset-0 z-50">
    <div class="flex min-h-full items-center justify-center p-4">
      <div class="relative w-full max-w-2xl app-surface rounded-lg shadow-xl border app-border"
           data-action="click->email-preview-modal#stopPropagation">
        <!-- Header -->
        <div class="flex items-center justify-between px-6 py-4 border-b app-border">
          <div>
            <h3 class="text-lg font-medium app-text">Email Preview</h3>
            <p class="text-sm app-text-secondary mt-0.5" data-email-preview-modal-target="title"></p>
          </div>
          <button type="button"
                  data-action="email-preview-modal#close"
                  class="app-text-muted hover:app-text-secondary transition-colors">
            <%= heroicon "x-mark", options: { class: "w-5 h-5" } %>
          </button>
        </div>

        <!-- Email content in iframe -->
        <div class="p-4 app-surface-alt">
          <div class="app-surface rounded-lg border app-border overflow-hidden" style="height: 480px;">
            <iframe data-email-preview-modal-target="iframe"
                    class="w-full h-full border-0"
                    sandbox="allow-same-origin">
            </iframe>
          </div>
        </div>

        <!-- Footer -->
        <div class="px-6 py-3 app-bg rounded-b-lg border-t app-border flex justify-end">
          <button type="button"
                  data-action="email-preview-modal#close"
                  class="px-4 py-2 text-sm font-medium app-text-secondary app-surface rounded-lg border app-border-strong hover:app-surface-alt transition-colors">
            Close
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
