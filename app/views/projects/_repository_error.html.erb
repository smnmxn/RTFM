<%= turbo_frame_tag "repository_list" do %>
  <div class="p-6 text-center">
    <div class="text-red-600 mb-2">
      <svg class="mx-auto h-12 w-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
      </svg>
    </div>
    <h3 class="text-lg font-medium text-slate-900">Failed to load repositories</h3>
    <p class="mt-1 text-slate-500"><%= error %></p>
    <div class="mt-4">
      <%= link_to "Try again", new_project_path, class: "text-violet-600 hover:text-violet-800 transition-smooth" %>
    </div>
  </div>
<% end %>
