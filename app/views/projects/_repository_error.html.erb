<%= turbo_frame_tag "repository_list" do %>
  <div class="p-6 text-center">
<div class="text-red-600 mb-2">
      <%= heroicon "exclamation-triangle", options: { class: "mx-auto h-12 w-12" } %>
    </div>
    <h3 class="text-lg font-medium app-text">Failed to load repositories</h3>
    <p class="mt-1 app-text-secondary"><%= error %></p>
    <div class="mt-4">
      <%= link_to "Try again", new_onboarding_project_path, class: "app-accent-text hover:app-accent-text transition-smooth" %>
    </div>
  </div>
<% end %>
