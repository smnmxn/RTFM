<%= tag.div id: "article_#{article.id}_row",
    data: { controller: "inbox-row", inbox_row_selected_value: selected, article_id: article.id },
    class: "group" do %>
  <%= link_to select_article_project_path(article.project, article_id: article.id, selected: "article_#{article.id}"),
      data: { turbo_frame: "inbox-editor", turbo_action: "replace", action: "click->inbox-row#select click->inbox#selectItem" },
      class: class_names(
        "block px-4 py-3 transition-colors border-l-4 border-b app-border",
        "row-selected" => selected,
        "row-unselected" => !selected
      ) do %>
    <div class="flex items-center gap-3">
      <div class="flex-shrink-0">
        <% if article.generation_running? %>
          <%= spinner_icon(size: "w-5 h-5", extra_class: "app-accent-text") %>
        <% elsif article.generation_failed? %>
          <%= heroicon "exclamation-triangle", options: { class: "w-5 h-5 text-red-500" } %>
        <% elsif article.approved? %>
          <%= heroicon "check-circle", options: { class: "w-5 h-5 text-green-500" } %>
        <% elsif article.rejected? %>
          <%= heroicon "x-circle", options: { class: "w-5 h-5 text-red-500" } %>
        <% else %>
          <%= heroicon "pencil-square", options: { class: "w-5 h-5 text-blue-500" } %>
        <% end %>
      </div>
      <div class="min-w-0 flex-1">
        <p class="text-sm font-medium app-text truncate"><%= article.title %></p>
        <% if article.section %>
          <p class="flex items-center gap-1 text-xs app-text-secondary truncate">
            <%= heroicon article.section.icon_name, options: { class: "w-3 h-3 flex-shrink-0" } %>
            <%= article.section.name %>
          </p>
        <% end %>
      </div>
    </div>
  <% end %>
<% end %>
