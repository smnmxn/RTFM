<%= tag.div id: "article_#{article.id}_row",
    data: { controller: "inbox-row", inbox_row_selected_value: selected, article_id: article.id },
    class: "group" do %>
  <%= link_to select_article_project_path(article.project, article_id: article.id, selected: "article_#{article.id}"),
      data: { turbo_frame: "inbox-editor", turbo_action: "replace", action: "click->inbox-row#select" },
      class: class_names(
        "block px-4 py-3 hover:bg-gray-50 transition-colors border-l-4",
        "border-indigo-500 bg-indigo-50" => selected,
        "border-transparent bg-white" => !selected
      ) do %>
    <div class="flex items-center justify-between">
      <div class="min-w-0 flex-1">
        <p class="text-sm font-medium text-gray-900 truncate"><%= article.title %></p>
        <% if article.section %>
          <p class="text-xs text-gray-500 truncate"><%= article.section.name %></p>
        <% end %>
      </div>
      <div class="ml-3 flex-shrink-0">
        <% if article.generation_running? %>
<span class="inline-flex items-center gap-1 px-2 py-0.5 rounded text-xs font-medium bg-indigo-100 text-indigo-800">
            <%= spinner_icon(size: "w-3 h-3") %>
            Generating
          </span>
        <% elsif article.approved? %>
          <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800">
            Approved
          </span>
        <% elsif article.rejected? %>
          <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-red-100 text-red-800">
            Rejected
          </span>
        <% else %>
          <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800">
            Draft
          </span>
        <% end %>
      </div>
    </div>
  <% end %>
<% end %>
