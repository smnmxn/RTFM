<%# locals: (project:, saved: false) %>
<%= turbo_frame_tag "ai_settings_form" do %>
  <div class="border app-border rounded-lg">
    <div class="px-4 py-3 app-bg border-b app-border rounded-t-lg">
      <h3 class="text-lg font-medium app-text">AI Settings</h3>
      <p class="text-sm app-text-secondary mt-1">Configure the AI model used for article generation.</p>
    </div>

    <%= form_with model: project,
                  url: update_ai_settings_project_path(project),
                  method: :patch,
                  class: "divide-y divide-app-border" do |form| %>

      <!-- Model Selection -->
      <div class="p-4 space-y-4">
        <div>
          <label class="block text-sm font-medium app-text mb-1">Model for Article Generation</label>
          <p class="text-sm app-text-secondary mb-2">
            Choose which Claude model to use when generating articles.
          </p>
          <%= form.select :claude_model,
              options_for_select(Project::CLAUDE_MODELS, project.claude_model_id),
              {},
              class: "w-full px-3 py-2 app-input rounded-lg text-sm" %>
          <p class="text-xs app-text-muted mt-2">
            <strong>Opus 4.5:</strong> Most capable, best for complex documentation.
            <strong>Sonnet 4.5:</strong> Balanced speed and quality.
            <strong>Haiku 4.5:</strong> Fastest, ideal for simple articles.
          </p>
        </div>
      </div>

      <!-- Submit -->
      <div class="p-4 app-bg rounded-b-lg flex items-center justify-between">
        <% if saved %>
          <span class="text-sm text-green-600 flex items-center gap-1">
            <%= heroicon "check-circle", options: { class: "w-4 h-4" } %>
            Saved
          </span>
        <% else %>
          <span></span>
        <% end %>
        <%= form.submit "Save AI Settings",
            class: "px-4 py-2 app-accent-bg text-white rounded-lg hover:app-accent-bg transition-colors text-sm font-medium cursor-pointer" %>
      </div>
    <% end %>
  </div>
<% end %>
