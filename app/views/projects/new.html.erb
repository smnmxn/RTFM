<div class="min-h-screen bg-gray-50">
  <!-- Header -->
  <header class="bg-white shadow-sm">
    <div class="max-w-7xl mx-auto px-4 py-4 sm:px-6 lg:px-8 flex justify-between items-center">
<%= link_to dashboard_path, class: "text-2xl font-bold text-gray-900 hover:opacity-80 transition-opacity" do %>
          supportpages.io
        <% end %>
      <div class="flex items-center gap-4">
        <%= link_to "Back to Dashboard", dashboard_path, class: "text-indigo-600 hover:text-indigo-800" %>
      </div>
    </div>
  </header>

  <main class="max-w-3xl mx-auto px-4 py-8 sm:px-6 lg:px-8">
    <% if flash[:alert] %>
      <div class="mb-6 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <div class="bg-white shadow rounded-lg">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-xl font-semibold text-gray-900">Connect a GitHub Repository</h2>
        <p class="mt-1 text-sm text-gray-500">
          Select a repository to track. We'll automatically set up a webhook to receive pull request events.
        </p>
      </div>

      <%= turbo_frame_tag "repository_list", src: repositories_projects_path, loading: :lazy do %>
        <div class="p-6 text-center">
          <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-indigo-600 mx-auto"></div>
          <p class="mt-2 text-sm text-gray-500">Loading your repositories...</p>
        </div>
      <% end %>
    </div>
  </main>
</div>
