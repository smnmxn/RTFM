<div class="app-bg">
  <%= render "shared/app_header" %>

  <main class="max-w-3xl mx-auto px-4 py-8 sm:px-6 lg:px-8">
    <% if flash[:alert] %>
      <div class="mb-6 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <div class="app-surface shadow rounded-lg">
      <div class="px-6 py-4 border-b app-border">
        <h2 class="text-xl font-semibold app-text">Connect a GitHub Repository</h2>
        <p class="mt-1 text-sm app-text-secondary">
          Select a repository to track. We'll automatically set up a webhook to receive pull request events.
        </p>
      </div>

      <%= turbo_frame_tag "repository_list", src: repositories_projects_path, loading: :lazy do %>
        <div class="p-6 text-center">
          <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-[color:var(--app-accent)] mx-auto"></div>
          <p class="mt-2 text-sm app-text-secondary">Loading your repositories...</p>
        </div>
      <% end %>
    </div>
  </main>
</div>
