<%= turbo_frame_tag "docs-status-banner" do %>
<% if project.analyzed_at.present? %>
  <%
    running_check = project.article_update_checks.where(status: [:pending, :running]).first
    running_analysis = project.updates.where(analysis_status: "running").first
    show_running = running_check.present? || running_analysis.present?

    unless show_running
      commits_behind = project.commits_since_baseline
      show_outdated = commits_behind.present? && commits_behind > 0
    end
  %>

  <% if show_running %>
    <div class="bg-indigo-50 border-b border-indigo-200">
      <div class="max-w-7xl mx-auto px-4 py-3 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between flex-wrap gap-2">
          <div class="flex items-center gap-2">
            <svg class="animate-spin h-5 w-5 text-indigo-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
              <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
              <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
            <p class="text-sm text-indigo-800">
              <% if running_check %>
                <span class="font-medium">Checking for documentation updates...</span>
                Analyzing changes since <%= running_check.short_base_sha || 'baseline' %>
              <% else %>
                <span class="font-medium">Analyzing code changes...</span>
                Looking for documentation impacts
              <% end %>
            </p>
          </div>
        </div>
      </div>
    </div>
  <% elsif show_outdated %>
    <div class="bg-amber-50 border-b border-amber-200">
      <div class="max-w-7xl mx-auto px-4 py-3 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between flex-wrap gap-2">
          <div class="flex items-center gap-2">
            <%= heroicon "exclamation-triangle", options: { class: "w-5 h-5 text-amber-500" } %>
            <p class="text-sm text-amber-800">
              Your docs may be out of date.
              <span class="font-medium"><%= commits_behind %> new commit<%= commits_behind == 1 ? ' has' : 's have' %> been pushed</span>
              since the last analysis.
            </p>
          </div>
          <div class="flex items-center gap-3">
            <%= link_to "#{project_path(project)}#code-history",
                class: "inline-flex items-center gap-1.5 px-3 py-1.5 text-sm font-medium text-amber-700 bg-amber-100 hover:bg-amber-200 rounded-md transition-colors",
                data: { turbo_frame: "_top" } do %>
              Review changes
              <%= heroicon "arrow-right", options: { class: "w-4 h-4" } %>
            <% end %>
            <button type="button"
                    class="text-amber-400 hover:text-amber-600"
                    onclick="this.closest('turbo-frame').innerHTML = ''">
              <%= heroicon "x-mark", options: { class: "w-5 h-5" } %>
            </button>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
<% end %>
