<div class="space-y-6">
  <!-- Current Status -->
  <div class="bg-white rounded-lg border border-gray-200 overflow-hidden">
    <div class="px-4 py-3 border-b border-gray-200 bg-gray-50">
      <h3 class="text-sm font-medium text-gray-900">Documentation Status</h3>
    </div>
    <div class="p-4">
      <div class="grid grid-cols-2 gap-4">
        <div>
          <dt class="text-sm font-medium text-gray-500">Analysis Commit</dt>
          <dd class="mt-1 text-sm text-gray-900 font-mono">
            <% if project.analysis_commit_sha.present? %>
              <%= project.analysis_commit_sha.first(7) %>
            <% else %>
              <span class="text-gray-400">Not analyzed</span>
            <% end %>
          </dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">Analyzed At</dt>
          <dd class="mt-1 text-sm text-gray-900">
            <% if project.analyzed_at.present? %>
              <%= time_ago_in_words(project.analyzed_at) %> ago
            <% else %>
              <span class="text-gray-400">Never</span>
            <% end %>
          </dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">Published Articles</dt>
          <dd class="mt-1 text-sm text-gray-900">
            <%= project.articles.published.count %>
          </dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">Articles with Commit Tracking</dt>
          <dd class="mt-1 text-sm text-gray-900">
            <%= project.articles.where.not(source_commit_sha: nil).count %> / <%= project.articles.count %>
          </dd>
        </div>
      </div>
    </div>
  </div>

  <!-- Check for Updates -->
  <div class="bg-white rounded-lg border border-gray-200 overflow-hidden">
    <div class="px-4 py-3 border-b border-gray-200 bg-gray-50">
      <h3 class="text-sm font-medium text-gray-900">Check for Updates</h3>
    </div>
    <div class="p-4">
      <p class="text-sm text-gray-600 mb-4">
        Analyze recent code changes to identify which articles may need updates or if new articles should be created.
      </p>

      <%= form_with url: create_article_update_check_project_path(project), method: :post, class: "flex items-end gap-4" do |f| %>
        <div class="flex-1">
          <label for="target_commit" class="block text-sm font-medium text-gray-700 mb-1">
            Target Commit (optional)
          </label>
          <input type="text"
                 name="target_commit"
                 id="target_commit"
                 placeholder="Leave empty for latest commit"
                 class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm text-sm focus:ring-indigo-500 focus:border-indigo-500 font-mono">
        </div>
        <button type="submit"
                class="inline-flex items-center gap-2 px-4 py-2 bg-indigo-600 text-white text-sm font-medium rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
          <%= heroicon "magnifying-glass", options: { class: "w-4 h-4" } %>
          Check for Updates
        </button>
      <% end %>
    </div>
  </div>

  <!-- Recent Update Checks -->
  <div class="bg-white rounded-lg border border-gray-200 overflow-hidden">
    <div class="px-4 py-3 border-b border-gray-200 bg-gray-50">
      <h3 class="text-sm font-medium text-gray-900">Recent Update Checks</h3>
    </div>
    <div class="divide-y divide-gray-200">
      <% recent_checks = project.article_update_checks.recent.limit(10) %>
      <% if recent_checks.any? %>
        <% recent_checks.each do |check| %>
          <%= render "projects/article_update_check", check: check %>
        <% end %>
      <% else %>
        <div class="p-4 text-sm text-gray-500 text-center">
          No update checks performed yet.
        </div>
      <% end %>
    </div>
  </div>
</div>
