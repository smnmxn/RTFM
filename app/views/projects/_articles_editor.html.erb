<%= turbo_frame_tag "articles-editor-frame", class: "h-full block" do %>
  <div class="h-full flex flex-col bg-white">
    <!-- Header with Title and Section -->
    <div class="px-6 py-4 border-b border-gray-200 flex-shrink-0">
      <div class="flex items-center justify-between">
        <div class="flex items-center gap-3 min-w-0">
          <h3 class="text-lg font-medium text-gray-900 truncate"><%= article.title %></h3>
          <% if article.section %>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-indigo-100 text-indigo-800 flex-shrink-0">
              <%= article.section.name %>
            </span>
          <% end %>
          <% if article.published? %>
            <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800 flex-shrink-0">
              Published
            </span>
          <% else %>
            <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-600 flex-shrink-0">
              Draft
            </span>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Action Toolbar -->
    <div class="px-6 py-3 border-b border-gray-200 bg-gray-50 flex items-center gap-3 flex-shrink-0">
      <!-- Move to Section Dropdown -->
      <div class="relative" data-controller="dropdown">
        <button type="button"
                data-action="click->dropdown#toggle"
                class="inline-flex items-center gap-1.5 px-3 py-1.5 text-sm border border-gray-300 rounded-lg bg-white hover:bg-gray-50 text-gray-700">
<%= heroicon "arrows-up-down", options: { class: "w-4 h-4" } %>
          Move to Section
          <%= heroicon "chevron-down", options: { class: "w-4 h-4" } %>
        </button>
        <div data-dropdown-target="menu"
             class="hidden absolute left-0 mt-1 w-56 rounded-lg shadow-lg bg-white ring-1 ring-black ring-opacity-5 z-10">
          <div class="py-1">
            <% sections.each do |section| %>
              <% next if section.id == article.section_id %>
              <%= button_to section.name,
                  move_to_section_project_article_path(project, article, section_id: section.id),
                  method: :patch,
                  form: { data: { turbo_stream: true } },
                  class: "block w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 cursor-pointer" %>
            <% end %>
            <% if article.section_id.present? %>
              <div class="border-t border-gray-100 my-1"></div>
              <%= button_to "Uncategorized",
                  move_to_section_project_article_path(project, article, section_id: nil),
                  method: :patch,
                  form: { data: { turbo_stream: true } },
                  class: "block w-full text-left px-4 py-2 text-sm text-gray-500 hover:bg-gray-100 cursor-pointer" %>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Reorder buttons -->
      <div class="flex items-center border border-gray-300 rounded-lg bg-white">
        <%= button_to reorder_project_article_path(project, article, direction: "up"),
            method: :patch,
            form: { data: { turbo_stream: true } },
            class: "p-1.5 text-gray-500 hover:text-gray-700 hover:bg-gray-50 rounded-l-lg border-r border-gray-300 cursor-pointer",
            title: "Move up" do %>
<%= heroicon "chevron-up", options: { class: "w-4 h-4" } %>
        <% end %>
        <%= button_to reorder_project_article_path(project, article, direction: "down"),
            method: :patch,
            form: { data: { turbo_stream: true } },
            class: "p-1.5 text-gray-500 hover:text-gray-700 hover:bg-gray-50 rounded-r-lg cursor-pointer",
            title: "Move down" do %>
          <%= heroicon "chevron-down", options: { class: "w-4 h-4" } %>
        <% end %>
      </div>

      <div class="flex-1"></div>

      <!-- Publish/Unpublish -->
      <% if article.published? %>
        <%= button_to unpublish_project_article_path(project, article),
            method: :post,
            form: { data: { turbo_stream: true } },
            class: "inline-flex items-center gap-1.5 px-3 py-1.5 text-sm border border-gray-300 rounded-lg bg-white hover:bg-gray-50 text-gray-700 cursor-pointer" do %>
          <%= heroicon "eye-slash", options: { class: "w-4 h-4" } %>
          Unpublish
        <% end %>
      <% else %>
        <%= button_to publish_project_article_path(project, article),
            method: :post,
            form: { data: { turbo_stream: true } },
            class: "inline-flex items-center gap-1.5 px-3 py-1.5 text-sm bg-green-600 text-white rounded-lg hover:bg-green-700 cursor-pointer" do %>
          <%= heroicon "eye", options: { class: "w-4 h-4" } %>
          Publish
        <% end %>
      <% end %>

      <!-- Generate (for blank articles) or Regenerate (for articles with content) -->
      <% if article.draft? && article.generation_pending? %>
        <%= render "articles/regenerate_modal",
            article: article,
            button_classes: "inline-flex items-center gap-1.5 px-3 py-1.5 text-sm bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 cursor-pointer",
            show_icon: true,
            label: "Generate" %>
      <% elsif article.draft? && article.generation_completed? %>
        <%= render "articles/regenerate_modal",
            article: article,
            button_classes: "inline-flex items-center gap-1.5 px-3 py-1.5 text-sm border border-gray-300 rounded-lg bg-white hover:bg-gray-50 text-gray-700 cursor-pointer",
            show_icon: true,
            label: "Regenerate" %>
      <% end %>

      <!-- Duplicate -->
      <%= button_to duplicate_project_article_path(project, article),
          method: :post,
          form: { data: { turbo_stream: true } },
          class: "inline-flex items-center p-1.5 text-sm border border-gray-300 rounded-lg bg-white hover:bg-gray-50 text-gray-700 cursor-pointer",
          title: "Duplicate" do %>
        <%= heroicon "document-duplicate", options: { class: "w-4 h-4" } %>
      <% end %>

      <!-- Delete -->
      <%= button_to project_article_path(project, article),
          method: :delete,
          form: { data: { turbo_confirm: "Are you sure you want to delete this article? This cannot be undone." } },
          class: "inline-flex items-center p-1.5 text-sm border border-red-300 rounded-lg bg-white hover:bg-red-50 text-red-700 cursor-pointer",
          title: "Delete" do %>
        <%= heroicon "trash", options: { class: "w-4 h-4" } %>
      <% end %>
    </div>

    <!-- Article Content -->
    <div class="flex-1 overflow-y-auto">
      <div class="px-6 py-6 max-w-3xl">
        <% if article.structured? %>
          <!-- Structured Content Rendering (Editable) -->
          <%= render "articles/editable/introduction", article: article %>
          <%= render "articles/editable/prerequisites", article: article %>
          <%= render "articles/editable/steps", article: article %>
          <%= render "articles/editable/tips", article: article %>
          <%= render "articles/editable/summary", article: article %>
        <% else %>
          <!-- Fallback: Markdown Rendering -->
          <div class="prose prose-lg max-w-none">
            <%= markdown(article.content) %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
