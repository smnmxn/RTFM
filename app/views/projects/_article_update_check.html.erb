<div id="update_check_<%= check.id %>" class="p-4">
  <div class="flex items-start justify-between">
    <div class="flex-1">
      <div class="flex items-center gap-3">
        <div class="flex items-center gap-2">
          <% case check.status %>
          <% when "pending" %>
            <span class="inline-flex items-center gap-1 px-2 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-700">
              <%= heroicon "clock", options: { class: "w-3 h-3" } %>
              Pending
            </span>
          <% when "running" %>
            <span class="inline-flex items-center gap-1 px-2 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-700">
              <%= heroicon "arrow-path", options: { class: "w-3 h-3 animate-spin" } %>
              Running
            </span>
          <% when "completed" %>
            <span class="inline-flex items-center gap-1 px-2 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-700">
              <%= heroicon "check-circle", options: { class: "w-3 h-3" } %>
              Completed
            </span>
          <% when "failed" %>
            <span class="inline-flex items-center gap-1 px-2 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-700">
              <%= heroicon "x-circle", options: { class: "w-3 h-3" } %>
              Failed
            </span>
          <% end %>
        </div>
        <span class="text-sm text-gray-500">
          <%= time_ago_in_words(check.created_at) %> ago
        </span>
      </div>

      <div class="mt-2 text-sm text-gray-600">
        <span class="font-medium">Comparing:</span>
        <% if check.base_commit_sha.present? %>
          <code class="px-1 py-0.5 bg-gray-100 rounded text-xs font-mono"><%= check.short_base_sha %></code>
          <span class="text-gray-400 mx-1">&rarr;</span>
        <% end %>
        <code class="px-1 py-0.5 bg-gray-100 rounded text-xs font-mono"><%= check.short_target_sha %></code>
      </div>

      <% if check.completed? %>
        <% summary = check.summary %>
        <div class="mt-3 flex items-center gap-4 text-sm">
          <% if summary[:total_suggestions] == 0 %>
            <span class="text-green-600 flex items-center gap-1">
              <%= heroicon "check-circle", options: { class: "w-4 h-4" } %>
              All articles are up to date
            </span>
          <% else %>
            <% if summary[:updates_needed] > 0 %>
              <span class="text-orange-600 flex items-center gap-1">
                <%= heroicon "pencil-square", options: { class: "w-4 h-4" } %>
                <%= summary[:updates_needed] %> update<%= summary[:updates_needed] == 1 ? "" : "s" %> needed
              </span>
            <% end %>
            <% if summary[:new_articles] > 0 %>
              <span class="text-blue-600 flex items-center gap-1">
                <%= heroicon "document-plus", options: { class: "w-4 h-4" } %>
                <%= summary[:new_articles] %> new article<%= summary[:new_articles] == 1 ? "" : "s" %> suggested
              </span>
            <% end %>
            <% if summary[:critical] > 0 || summary[:high_priority] > 0 %>
              <span class="text-red-600 flex items-center gap-1">
                <%= heroicon "exclamation-triangle", options: { class: "w-4 h-4" } %>
                <%= summary[:critical] + summary[:high_priority] %> high priority
              </span>
            <% end %>
          <% end %>
        </div>

        <!-- Suggestions List -->
        <% suggestions = check.article_update_suggestions.by_priority %>
        <% if suggestions.any? %>
          <div class="mt-4 space-y-2">
            <% suggestions.each do |suggestion| %>
              <%= render "projects/article_update_suggestion", suggestion: suggestion %>
            <% end %>
          </div>
        <% end %>
      <% elsif check.failed? %>
        <div class="mt-3 text-sm text-red-600">
          <% if check.results.is_a?(Hash) && check.results["error"] %>
            Error: <%= check.results["error"] %>
          <% else %>
            Check failed. Please try again.
          <% end %>
        </div>
      <% elsif check.running? %>
        <div class="mt-3 text-sm text-gray-500 flex items-center gap-2">
          <svg class="animate-spin h-4 w-4 text-indigo-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
          </svg>
          Analyzing code changes...
        </div>
      <% end %>
    </div>
  </div>
</div>
