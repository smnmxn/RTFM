<%= turbo_frame_tag "inbox-editor", class: "h-full block" do %>
  <div class="h-full flex flex-col app-surface">
    <!-- Header with Actions -->
    <div class="px-6 py-4 border-b app-border flex items-start justify-between flex-shrink-0">
      <div>
        <h3 class="text-lg font-medium app-text"><%= recommendation.title %></h3>
        <% if recommendation.section %>
          <span class="mt-1 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium app-accent-light app-accent-on-light">
            <%= recommendation.section.name %>
          </span>
        <% end %>
      </div>

      <div class="flex items-center gap-2">
        <%= button_to "Reject",
            reject_recommendation_project_path(recommendation.project, recommendation_id: recommendation.id),
            method: :post,
            form: { data: { turbo_stream: true } },
            class: "btn-reject cursor-pointer" %>

        <%= button_to "Accept",
            accept_recommendation_project_path(recommendation.project, recommendation_id: recommendation.id),
            method: :post,
            form: { data: { turbo_stream: true } },
            class: "btn-approve cursor-pointer" %>
      </div>
    </div>

    <!-- Recommendation Content -->
    <div class="flex-1 overflow-y-auto">
      <div class="px-6 py-6 max-w-3xl">
        <!-- Description -->
        <div class="mb-6">
          <h4 class="text-sm font-semibold app-text uppercase tracking-wide mb-2">Description</h4>
          <p class="app-text-secondary"><%= recommendation.description %></p>
        </div>

        <!-- Justification -->
        <div class="mb-6">
          <h4 class="text-sm font-semibold app-text uppercase tracking-wide mb-2">Why this article?</h4>
          <p class="app-text-secondary"><%= recommendation.justification %></p>
        </div>

        <!-- Source (if from PR) -->
        <% if recommendation.source_update.present? %>
          <div class="mb-6">
            <h4 class="text-sm font-semibold app-text uppercase tracking-wide mb-2">Source</h4>
            <p class="app-text-secondary">
              Generated from
              <%= link_to "PR ##{recommendation.source_update.pull_request_number}",
                  recommendation.source_update.pull_request_url,
                  target: "_blank",
                  class: "app-accent-text hover:app-accent-text font-medium" %>
            </p>
          </div>
        <% end %>

        <!-- Info Box -->
        <div class="app-info-bg border app-info-border rounded-lg p-4">
<div class="flex">
            <%= heroicon "information-circle", variant: :solid, options: { class: "h-5 w-5 app-info-text mr-3 flex-shrink-0" } %>
            <div class="text-sm app-info-text">
              <p class="font-medium">What happens when you accept?</p>
              <p class="mt-1">An article will be generated based on this suggestion. You'll be able to review and edit it before publishing.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
