<!-- Settings Header -->
<div class="px-6 py-4 border-b border-gray-200 flex-shrink-0">
  <div class="flex items-center justify-between">
    <div>
      <h2 class="text-xl font-semibold text-gray-900">Settings</h2>
      <p class="mt-1 text-sm text-gray-500">
        Configure your project settings.
      </p>
    </div>
  </div>
</div>

<!-- Settings Two Column Layout -->
<div class="flex-1 flex flex-row overflow-hidden"
     data-controller="tabs"
     data-tabs-active-value="branding"
     data-tabs-hash-value="true"
     data-tabs-hash-prefix-value="settings/">

  <!-- Left: Sidebar Navigation -->
  <div class="w-64 flex-shrink-0 border-r border-gray-200 bg-gray-50">
    <nav class="p-4 flex flex-col gap-1" aria-label="Settings navigation">
      <button type="button"
              data-tabs-target="tab"
              data-tabs-name="branding"
              data-action="click->tabs#switch"
              class="settings-nav-item w-full text-left px-3 py-2 rounded-md text-sm font-medium flex items-center gap-2 bg-white shadow-sm text-gray-900">
        <%= heroicon "paint-brush", options: { class: "w-4 h-4 text-gray-400" } %>
        Branding
      </button>
      <button type="button"
              data-tabs-target="tab"
              data-tabs-name="ai-settings"
              data-action="click->tabs#switch"
              class="settings-nav-item w-full text-left px-3 py-2 rounded-md text-sm font-medium flex items-center gap-2 text-gray-600 hover:bg-gray-100">
        <%= heroicon "cpu-chip", options: { class: "w-4 h-4 text-gray-400" } %>
        AI Settings
      </button>
      <button type="button"
              data-tabs-target="tab"
              data-tabs-name="danger-zone"
              data-action="click->tabs#switch"
              class="settings-nav-item w-full text-left px-3 py-2 rounded-md text-sm font-medium flex items-center gap-2 text-gray-600 hover:bg-gray-100">
        <%= heroicon "exclamation-triangle", options: { class: "w-4 h-4 text-red-400" } %>
        Danger Zone
      </button>
    </nav>
  </div>

  <!-- Right: Content Area -->
  <div class="flex-1 overflow-y-auto p-6">
    <!-- Branding Panel -->
    <div data-tabs-target="panel" data-tabs-name="branding">
      <%= render "projects/branding_form", project: @project, saved: false %>
    </div>

    <!-- AI Settings Panel -->
    <div data-tabs-target="panel" data-tabs-name="ai-settings" class="hidden">
      <%= render "projects/ai_settings_form", project: @project, saved: false %>
    </div>

    <!-- Danger Zone Panel -->
    <div data-tabs-target="panel" data-tabs-name="danger-zone" class="hidden">
      <%= render "projects/danger_zone", project: @project %>
    </div>
  </div>
</div>
