<!-- Settings Header -->
<div class="px-6 py-4 border-b app-border flex-shrink-0">
  <div class="flex items-center justify-between">
    <div>
      <h2 class="text-xl font-semibold app-text">Settings</h2>
      <p class="mt-1 text-sm app-text-secondary">
        Configure your project settings.
      </p>
    </div>
  </div>
</div>

<!-- Settings Two Column Layout -->
<div class="flex-1 flex flex-row overflow-hidden"
     data-controller="tabs"
     data-tabs-active-value="branding"
     data-tabs-hash-value="true"
     data-tabs-hash-prefix-value="settings/">

  <!-- Left: Sidebar Navigation -->
  <div class="w-64 flex-shrink-0 border-r app-border app-bg">
    <nav class="p-4 flex flex-col gap-1" aria-label="Settings navigation">
      <button type="button"
              data-tabs-target="tab"
              data-tabs-name="branding"
              data-action="click->tabs#switch"
              class="settings-nav-item settings-nav-inactive w-full text-left px-3 py-2 rounded-md text-sm font-medium flex items-center gap-2">
        <%= heroicon "paint-brush", options: { class: "w-4 h-4 app-text-muted" } %>
        Branding
      </button>
      <button type="button"
              data-tabs-target="tab"
              data-tabs-name="update-strategy"
              data-action="click->tabs#switch"
              class="settings-nav-item settings-nav-inactive w-full text-left px-3 py-2 rounded-md text-sm font-medium flex items-center gap-2">
        <%= heroicon "light-bulb", options: { class: "w-4 h-4 app-text-muted" } %>
        Recommendations
      </button>
      <button type="button"
              data-tabs-target="tab"
              data-tabs-name="ai-settings"
              data-action="click->tabs#switch"
              class="settings-nav-item settings-nav-inactive w-full text-left px-3 py-2 rounded-md text-sm font-medium flex items-center gap-2">
        <%= heroicon "cpu-chip", options: { class: "w-4 h-4 app-text-muted" } %>
        AI Settings
      </button>
      <button type="button"
              data-tabs-target="tab"
              data-tabs-name="custom-domain"
              data-action="click->tabs#switch"
              class="settings-nav-item settings-nav-inactive w-full text-left px-3 py-2 rounded-md text-sm font-medium flex items-center gap-2">
        <%= heroicon "globe-alt", options: { class: "w-4 h-4 app-text-muted" } %>
        Custom Domain
        <% if @project.custom_domain_active? %>
          <span class="ml-auto inline-flex items-center rounded-full bg-green-100 px-1.5 py-0.5 text-xs font-medium text-green-700">Active</span>
        <% elsif @project.custom_domain_verifying? %>
          <span class="ml-auto inline-flex items-center rounded-full bg-yellow-100 px-1.5 py-0.5 text-xs font-medium text-yellow-700">Pending</span>
        <% end %>
      </button>

      <button type="button"
              data-tabs-target="tab"
              data-tabs-name="notifications"
              data-action="click->tabs#switch"
              class="settings-nav-item settings-nav-inactive w-full text-left px-3 py-2 rounded-md text-sm font-medium flex items-center gap-2">
        <%= heroicon "bell", options: { class: "w-4 h-4 app-text-muted" } %>
        Notifications
      </button>
      <button type="button"
              data-tabs-target="tab"
              data-tabs-name="danger-zone"
              data-action="click->tabs#switch"
              class="settings-nav-item settings-nav-inactive w-full text-left px-3 py-2 rounded-md text-sm font-medium flex items-center gap-2">
        <%= heroicon "exclamation-triangle", options: { class: "w-4 h-4 text-red-400" } %>
        Danger Zone
      </button>
    </nav>
  </div>

  <!-- Right: Content Area -->
  <div class="flex-1 overflow-y-auto p-6">
    <!-- Branding Panel -->
    <div data-tabs-target="panel" data-tabs-name="branding">
      <%= render "projects/branding_form", project: @project, saved: false %>
    </div>

    <!-- Update Strategy Panel -->
    <div data-tabs-target="panel" data-tabs-name="update-strategy" class="hidden">
      <%= render "projects/update_strategy_form", project: @project, saved: false %>
    </div>

    <!-- AI Settings Panel -->
    <div data-tabs-target="panel" data-tabs-name="ai-settings" class="hidden">
      <%= render "projects/ai_settings_form", project: @project, saved: false %>
    </div>

    <!-- Custom Domain Panel -->
    <div data-tabs-target="panel" data-tabs-name="custom-domain" class="hidden">
      <%= render "projects/custom_domain_form", project: @project, saved: false %>
    </div>

    <!-- Notifications Panel -->
    <div data-tabs-target="panel" data-tabs-name="notifications" class="hidden">
      <div class="space-y-6">
        <!-- In-app & Browser Notifications -->
        <div class="border app-border rounded-lg">
          <div class="px-4 py-3 app-bg border-b app-border rounded-t-lg">
            <h3 class="text-lg font-medium app-text">Notifications</h3>
            <p class="text-sm app-text-secondary mt-1">Configure how you're notified when background tasks complete.</p>
          </div>

          <div class="divide-y divide-app-border">
            <!-- In-app toasts (always on) -->
            <div class="flex items-center gap-4 p-4">
              <div class="shrink-0">
                <span class="inline-flex items-center rounded-full bg-green-100 px-2.5 py-0.5 text-xs font-medium text-green-800">Always on</span>
              </div>
              <div class="flex-1">
                <p class="text-sm font-medium app-text">In-app toast notifications</p>
                <p class="text-sm app-text-secondary mt-0.5">Brief pop-up notifications appear in the bottom-right corner when tasks complete.</p>
              </div>
              <div class="shrink-0">
                <%= button_to "Test", test_toast_project_path(project), params: { toast_type: "success" }, class: "px-4 py-2 app-accent-bg text-white rounded-lg hover:app-accent-bg transition-colors text-sm font-medium cursor-pointer", data: { turbo: true } %>
              </div>
            </div>

            <!-- Browser notifications (opt-in) -->
            <div class="flex items-center gap-4 p-4" data-controller="browser-notification">
              <div class="shrink-0">
                <button type="button"
                        data-browser-notification-target="toggle"
                        data-action="browser-notification#request"
                        class="inline-flex items-center rounded-full app-surface-alt px-2.5 py-0.5 text-xs font-medium app-text hover:app-surface-alt cursor-pointer transition-colors">
                  Enable
                </button>
              </div>
              <div class="flex-1">
                <p class="text-sm font-medium app-text">Browser notifications</p>
                <p class="text-sm app-text-secondary mt-0.5" data-browser-notification-target="status">Get notified when background tasks finish, even if the tab is not focused.</p>
              </div>
              <div class="shrink-0 hidden" data-browser-notification-target="testButton">
                <button type="button"
                        data-action="browser-notification#test"
                        class="px-4 py-2 app-accent-bg text-white rounded-lg hover:app-accent-bg transition-colors text-sm font-medium cursor-pointer">
                  Test
                </button>
              </div>
            </div>
          </div>
        </div>

        <!-- Email Notifications -->
        <%= render "projects/notification_preferences_form", project: project, user: current_user, saved: false %>
      </div>
    </div>

    <!-- Danger Zone Panel -->
    <div data-tabs-target="panel" data-tabs-name="danger-zone" class="hidden">
      <%= render "projects/danger_zone", project: @project %>
    </div>
  </div>
</div>
