<%= turbo_frame_tag "inbox-editor", class: "h-full block" do %>
  <div class="h-full flex flex-col bg-white" data-article-generation-status="<%= article.generation_status %>">
    <!-- Header with Actions -->
    <div class="px-6 py-4 border-b border-gray-200 flex items-start justify-between flex-shrink-0">
      <div>
        <h3 class="text-lg font-medium text-gray-900"><%= article.title %></h3>
        <% if article.section %>
          <span class="mt-1 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-indigo-100 text-indigo-800">
            <%= article.section.name %>
          </span>
        <% end %>
      </div>

      <div class="flex items-center gap-2">
        <% if article.unreviewed? %>
          <% if article.generation_running? %>
            <span class="inline-flex items-center gap-2 text-sm text-gray-500">
              <%= spinner_icon(size: "h-4 w-4") %>
              Generating...
            </span>
          <% else %>
            <% if article.generation_completed? || article.structured? %>
              <%= render "articles/preview_modal",
                  article: article,
                  project: article.project,
                  button_classes: "inline-flex items-center gap-1.5 px-3 py-1.5 text-sm border border-gray-300 text-gray-700 font-medium rounded-lg hover:bg-gray-50 cursor-pointer" %>
            <% end %>

            <%= button_to "Reject",
                reject_article_project_path(article.project, article_id: article.id),
                method: :post,
                form: { data: { turbo_stream: true } },
                class: "px-3 py-1.5 text-sm border border-red-300 text-red-700 font-medium rounded-lg hover:bg-red-50 cursor-pointer" %>

            <% if article.generation_pending? %>
              <%= render "articles/regenerate_modal",
                  article: article,
                  label: "Generate",
                  button_classes: "px-3 py-1.5 text-sm border border-gray-300 text-gray-700 font-medium rounded-lg hover:bg-gray-50 cursor-pointer" %>
            <% elsif article.generation_completed? || article.generation_failed? %>
              <%= render "articles/regenerate_modal",
                  article: article,
                  button_classes: "px-3 py-1.5 text-sm border border-gray-300 text-gray-700 font-medium rounded-lg hover:bg-gray-50 cursor-pointer" %>
            <% end %>

            <%= button_to "Approve",
                approve_article_project_path(article.project, article_id: article.id),
                method: :post,
                form: { data: { turbo_stream: true } },
                class: "px-4 py-1.5 text-sm bg-green-600 text-white font-medium rounded-lg hover:bg-green-700 cursor-pointer" %>
          <% end %>
        <% elsif article.approved? %>
<span class="inline-flex items-center gap-1.5 text-sm">
            <%= heroicon "check-circle", variant: :solid, options: { class: "h-5 w-5 text-green-500" } %>
            <span class="text-green-700 font-medium">Approved</span>
          </span>
        <% else %>
          <div class="flex items-center gap-3">
<span class="inline-flex items-center gap-1.5 text-sm">
              <%= heroicon "x-circle", variant: :solid, options: { class: "h-5 w-5 text-gray-400" } %>
              <span class="text-gray-500 font-medium">Rejected</span>
            </span>
            <%= button_to "Undo",
                undo_reject_article_project_path(article.project, article_id: article.id),
                method: :post,
                form: { data: { turbo_stream: true } },
                class: "text-sm text-indigo-600 hover:text-indigo-800 font-medium cursor-pointer" %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Article Content (Block Editor) -->
    <div class="flex-1 overflow-y-auto">
      <div class="px-6 py-6 max-w-3xl">
        <% if article.generation_completed? || article.generation_pending? %>
          <% if article.structured? %>
            <!-- Structured Content Rendering (Editable) -->
            <%= render "articles/editable/introduction", article: article %>
            <%= render "articles/editable/prerequisites", article: article %>
            <%= render "articles/editable/steps", article: article %>
            <%= render "articles/editable/tips", article: article %>
            <%= render "articles/editable/summary", article: article %>
          <% else %>
            <!-- Fallback: Markdown Rendering -->
            <div class="prose prose-lg max-w-none">
              <%= markdown(article.content) %>
            </div>
          <% end %>
        <% elsif article.generation_running? %>
          <div class="text-center py-12">
            <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-indigo-600 mx-auto"></div>
            <p class="mt-4 text-gray-500">Article content is being generated...</p>
          </div>
        <% elsif article.generation_failed? %>
<div class="text-center py-12">
            <%= heroicon "exclamation-triangle", options: { class: "mx-auto h-12 w-12 text-red-400" } %>
            <p class="mt-4 text-red-600">Article generation failed</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
