<div class="app-surface shadow rounded-lg mb-6">
  <div class="px-6 py-4 border-b app-border">
    <h3 class="text-lg font-semibold app-text">Recommended Support Articles</h3>
    <p class="mt-1 text-sm app-text-secondary">
      AI-suggested how-to guides grouped by section
    </p>
  </div>

  <div id="recommendations-list">
    <% if recommendations.any? %>
      <% recommendations.includes(:section).group_by(&:section).each do |section, section_recommendations| %>
        <div class="border-b app-border last:border-b-0">
          <div class="px-6 py-3 app-surface-alt border-l-4 border-[color:var(--app-accent)]">
            <h4 class="font-medium app-text">
              <%= section&.name || "Uncategorized" %>
            </h4>
            <% if section&.description.present? %>
              <p class="text-sm app-text-secondary"><%= section.description %></p>
            <% end %>
          </div>
          <div class="divide-y divide-app-border ml-6">
            <% section_recommendations.each do |recommendation| %>
              <%= render "recommendations/card", recommendation: recommendation %>
            <% end %>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="p-6 text-center app-text-secondary">
        No pending article recommendations
      </div>
    <% end %>
  </div>
</div>
