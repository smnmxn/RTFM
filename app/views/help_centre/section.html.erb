<% content_for(:title) { "#{@section.name} - #{@project.name} Help Centre" } %>

<div class="space-y-8">
  <!-- Breadcrumb -->
  <nav class="text-sm">
    <%= link_to "Help Centre",
        help_centre_path(),
        class: "text-brand hover:opacity-80 transition-colors" %>
    <span class="mx-2 text-muted">/</span>
    <span class="text-body"><%= @section.name %></span>
  </nav>

  <!-- Section Header -->
  <div class="flex items-start gap-4">
    <div class="flex-shrink-0 w-14 h-14 bg-brand-light text-brand rounded-xl
                flex items-center justify-center">
      <%= heroicon @section.icon_name, options: { class: "w-7 h-7" } %>
    </div>
    <div>
      <h1 class="text-2xl font-bold text-heading"><%= @section.name %></h1>
      <% if @section.description.present? %>
        <p class="mt-1 text-body"><%= @section.description %></p>
      <% end %>
      <p class="mt-2 text-sm text-muted">
        <%= pluralize(@articles.count, "article") %>
      </p>
    </div>
  </div>

  <!-- Articles List -->
  <% if @articles.any? %>
    <div class="grid gap-4 md:grid-cols-2">
      <% @articles.each do |article| %>
        <%= render "help_centre/article_card", article: article %>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-16 bg-card rounded-xl shadow-sm border border-subtle">
<%= heroicon "document-text", options: { class: "mx-auto w-12 h-12 text-muted mb-4" } %>
      <p class="text-body text-lg">No articles in this section yet.</p>
      <p class="text-muted text-sm mt-1">Check back soon for new content.</p>
    </div>
  <% end %>
</div>
