<% content_for(:title) { "#{@section.name} - #{@project.name} Help Centre" } %>

<div class="space-y-8">
  <!-- Breadcrumb -->
  <nav class="text-sm">
    <%= link_to "Help Centre",
        help_centre_path(project_slug: @project.slug),
        class: "text-indigo-600 hover:text-indigo-800 transition-colors" %>
    <span class="mx-2 text-gray-400">/</span>
    <span class="text-gray-600"><%= @section.name %></span>
  </nav>

  <!-- Section Header -->
  <div class="flex items-start gap-4">
    <div class="flex-shrink-0 w-14 h-14 bg-indigo-100 text-indigo-600 rounded-xl
                flex items-center justify-center">
      <%= render "help_centre/icons/#{@section.icon_name}" %>
    </div>
    <div>
      <h1 class="text-2xl font-bold text-gray-900"><%= @section.name %></h1>
      <% if @section.description.present? %>
        <p class="mt-1 text-gray-500"><%= @section.description %></p>
      <% end %>
      <p class="mt-2 text-sm text-gray-400">
        <%= pluralize(@articles.count, "article") %>
      </p>
    </div>
  </div>

  <!-- Articles List -->
  <% if @articles.any? %>
    <div class="grid gap-4 md:grid-cols-2">
      <% @articles.each do |article| %>
        <%= render "help_centre/article_card", article: article %>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-16 bg-white rounded-xl shadow-sm">
      <svg class="mx-auto w-12 h-12 text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m0 12.75h7.5m-7.5 3H12M10.5 2.25H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z"/>
      </svg>
      <p class="text-gray-500 text-lg">No articles in this section yet.</p>
      <p class="text-gray-400 text-sm mt-1">Check back soon for new content.</p>
    </div>
  <% end %>
</div>
