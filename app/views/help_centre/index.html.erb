<% content_for(:title) { "#{@project.name} Help Centre" } %>

<% content_for :hero do %>
  <%= render "help_centre/hero" %>
<% end %>

<div class="space-y-12">
  <!-- Section Cards Grid -->
  <% sections_with_articles = @sections.select { |s| s.articles.published.any? } %>
  <% if sections_with_articles.any? %>
    <section>
      <h2 class="text-xl font-semibold text-gray-900 mb-6">Browse by category</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% sections_with_articles.each do |section| %>
          <%= render "help_centre/section_card",
                     section: section,
                     article_count: section.articles.published.count %>
        <% end %>
      </div>
    </section>
  <% end %>

  <!-- Popular Articles -->
  <% if @popular_articles.any? %>
    <section>
      <h2 class="text-xl font-semibold text-gray-900 mb-6">Popular articles</h2>
      <div class="grid gap-4 md:grid-cols-2">
        <% @popular_articles.each do |article| %>
          <%= render "help_centre/article_card", article: article %>
        <% end %>
      </div>
    </section>
  <% end %>

  <!-- Empty State -->
  <% if sections_with_articles.empty? %>
    <div class="text-center py-16 bg-white rounded-xl shadow-sm">
<%= heroicon "book-open", options: { class: "mx-auto w-12 h-12 text-gray-300 mb-4" } %>
      <p class="text-gray-500 text-lg">No articles published yet.</p>
      <p class="text-gray-400 text-sm mt-1">Check back soon for helpful guides and tutorials.</p>
    </div>
  <% end %>
</div>
