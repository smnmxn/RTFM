<% content_for(:title) { "#{@project.name} Help Centre" } %>

<% content_for :hero do %>
  <%= render "help_centre/hero" %>
<% end %>

<div class="space-y-12">
  <!-- Section Cards Grid -->
  <% sections_with_articles = @sections.select { |s| s.articles.published.any? } %>
  <% if sections_with_articles.any? %>
    <section>
      <h2 class="text-xl font-semibold text-heading mb-6 font-display">Browse by category</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6" data-controller="stagger">
        <% sections_with_articles.each do |section| %>
          <% published_articles = section.articles.published.reorder(:position) %>
          <div data-stagger-target="item">
            <%= render "help_centre/section_card",
                       section: section,
                       articles: published_articles,
                       article_count: published_articles.count %>
          </div>
        <% end %>
      </div>
    </section>
  <% end %>

  <!-- Popular Articles -->
  <% if @popular_articles.any? %>
    <section>
      <h2 class="text-xl font-semibold text-heading mb-6 font-display">Popular articles</h2>
      <div class="grid gap-4 md:grid-cols-2" data-controller="stagger">
        <% @popular_articles.each do |article| %>
          <div data-stagger-target="item">
            <%= render "help_centre/article_card", article: article %>
          </div>
        <% end %>
      </div>
    </section>
  <% end %>

  <!-- Empty State -->
  <% if sections_with_articles.empty? %>
    <div class="text-center py-16 bg-card rounded-xl shadow-sm border border-subtle">
<%= heroicon "book-open", options: { class: "mx-auto w-12 h-12 text-muted mb-4" } %>
      <p class="text-body text-lg">No articles published yet.</p>
      <p class="text-muted text-sm mt-1">Check back soon for helpful guides and tutorials.</p>
    </div>
  <% end %>
</div>
