<% if article.tips.any? %>
  <div id="tips" class="mb-8 bg-blue-50 rounded-lg p-4 scroll-mt-24">
    <h2 class="text-lg font-semibold text-blue-900 mb-3">Tips</h2>
    <ul class="space-y-2 text-blue-800">
      <% article.tips.each do |tip| %>
        <li class="flex gap-2">
<%= heroicon "information-circle", variant: :solid, options: { class: "w-5 h-5 text-blue-500 flex-shrink-0 mt-0.5" } %>
          <span><%= tip %></span>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>
