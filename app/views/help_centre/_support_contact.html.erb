<%# locals: (project:) %>
<% if project.has_support_contact? %>
  <div class="mt-8 bg-card shadow rounded-xl p-6 border border-subtle">
    <h3 class="text-lg font-semibold text-heading mb-2">Still need help?</h3>
    <p class="text-sm text-body mb-4">Get in touch with our support team directly.</p>
    <div class="flex flex-wrap gap-3">
      <% if project.support_email.present? %>
        <%= link_to "mailto:#{project.support_email}",
            class: "inline-flex items-center gap-2 px-4 py-2 text-sm font-medium text-white bg-brand rounded-lg hover:opacity-90 transition-opacity" do %>
          <%= heroicon "envelope", options: { class: "w-4 h-4" } %>
          <%= project.support_email %>
        <% end %>
      <% end %>
      <% if project.support_phone.present? %>
        <%= link_to "tel:#{project.support_phone}",
            class: "inline-flex items-center gap-2 px-4 py-2 text-sm font-medium text-heading bg-card rounded-lg border border-default hover:bg-muted transition-colors" do %>
          <%= heroicon "phone", options: { class: "w-4 h-4 text-body" } %>
          <%= project.support_phone %>
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>
