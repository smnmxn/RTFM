<%# locals: (article:) %>
<% if article.structured? && (article.prerequisites.any? || article.steps.any? || article.tips.any? || article.summary.present?) %>
  <nav class="bg-muted rounded-lg p-4">
    <h3 class="text-sm font-semibold text-heading mb-3">On this page</h3>
    <ul class="space-y-2 text-sm">
      <% if article.prerequisites.any? %>
        <li>
          <a href="#prerequisites" class="text-body hover:text-brand transition-colors">
            Prerequisites
          </a>
        </li>
      <% end %>
      <% if article.steps.any? %>
        <li>
          <a href="#steps" class="text-body hover:text-brand transition-colors">
            Steps
          </a>
          <ul class="mt-2 ml-3 space-y-1.5 border-l border-default pl-3">
            <% article.steps.each_with_index do |step, i| %>
              <li>
                <a href="#step-<%= i + 1 %>" class="text-body hover:text-brand transition-colors text-xs">
                  <%= i + 1 %>. <%= step["title"].to_s.truncate(35) %>
                </a>
              </li>
            <% end %>
          </ul>
        </li>
      <% end %>
      <% if article.tips.any? %>
        <li>
          <a href="#tips" class="text-body hover:text-brand transition-colors">
            Tips
          </a>
        </li>
      <% end %>
      <% if article.summary.present? %>
        <li>
          <a href="#summary" class="text-body hover:text-brand transition-colors">
            Summary
          </a>
        </li>
      <% end %>
    </ul>
  </nav>
<% end %>
