<% content_for(:title) { "Question Limit Reached - #{@project.name} Help Centre" } %>

<div class="lg:grid lg:grid-cols-4 lg:gap-8">
  <!-- Sidebar - Desktop -->
  <aside class="hidden lg:block lg:col-span-1">
    <div class="sticky top-24 space-y-6">
      <!-- Browse Categories -->
      <nav class="bg-gray-50 rounded-lg p-4">
        <h4 class="text-sm font-semibold text-gray-900 mb-3">Browse categories</h4>
        <ul class="space-y-2 text-sm">
          <% @project.sections.visible.ordered.limit(6).each do |section| %>
            <li>
              <%= link_to section.name,
                  help_centre_section_path(section_slug: section.slug),
                  class: "text-gray-600 hover:text-brand transition-colors" %>
            </li>
          <% end %>
          <%= link_to "View all...", help_centre_path, class: "text-brand hover:opacity-80 text-xs font-medium" %>
        </ul>
      </nav>
    </div>
  </aside>

  <!-- Main Content -->
  <div class="lg:col-span-3">
    <div class="bg-white shadow rounded-xl">
      <!-- Header -->
      <div class="px-6 py-5 border-b border-gray-200">
        <nav class="text-sm mb-3">
          <%= link_to "Help Centre",
              help_centre_path,
              class: "text-brand hover:opacity-80 transition-colors" %>
          <span class="mx-2 text-gray-400">/</span>
          <span class="text-gray-600">Ask</span>
        </nav>
        <h1 class="text-2xl font-bold text-gray-900">Question Limit Reached</h1>
      </div>

      <!-- Content -->
      <div class="px-6 py-8">
        <div class="bg-amber-50 border border-amber-200 rounded-lg p-6 mb-8">
          <div class="flex gap-4">
            <%= heroicon "clock", options: { class: "w-8 h-8 text-amber-500 flex-shrink-0" } %>
            <div>
              <h2 class="text-lg font-semibold text-amber-800 mb-2">
                Please try again later
              </h2>
              <p class="text-amber-700 mb-4">
                To ensure quality answers for everyone, we limit the number of AI questions per hour.
                <% if @limit_info[:hourly][:exceeded] %>
                  You've reached the hourly limit of <%= @limit_info[:hourly][:limit] %> questions.
                <% else %>
                  You've reached the daily limit of <%= @limit_info[:daily][:limit] %> questions.
                <% end %>
              </p>
              <p class="text-amber-600 text-sm">
                <% minutes = (@retry_after / 60.0).ceil %>
                <% if minutes < 60 %>
                  You can ask another question in <strong><%= pluralize(minutes, 'minute') %></strong>.
                <% else %>
                  <% hours = (minutes / 60.0).ceil %>
                  You can ask another question in <strong><%= pluralize(hours, 'hour') %></strong>.
                <% end %>
              </p>
            </div>
          </div>
        </div>

        <div class="text-center py-4">
          <p class="text-gray-600 mb-6">
            In the meantime, browse our help articles for answers to common questions.
          </p>
          <%= link_to help_centre_path,
              class: "inline-flex items-center gap-2 px-6 py-3 bg-brand text-white rounded-lg hover:opacity-90 transition-opacity font-medium" do %>
            <%= heroicon "book-open", options: { class: "w-5 h-5" } %>
            Browse Help Articles
          <% end %>
        </div>
      </div>
    </div>

    <!-- Popular Articles -->
    <% popular = @project.articles.published.order(published_at: :desc).limit(3) %>
    <% if popular.any? %>
      <div class="mt-8">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Popular articles</h3>
        <div class="space-y-3">
          <% popular.each do |article| %>
            <%= link_to help_centre_article_path(section_slug: article.section.slug, article_slug: article.slug),
                class: "block bg-white p-4 rounded-lg shadow-sm hover:shadow-md transition-shadow" do %>
              <h4 class="font-medium text-gray-900"><%= article.title %></h4>
              <p class="text-sm text-gray-500 mt-1"><%= article.section.name %></p>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
