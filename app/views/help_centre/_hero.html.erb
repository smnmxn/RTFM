<div class="bg-gradient-to-br from-indigo-600 to-purple-700 text-white">
  <div class="max-w-6xl mx-auto px-4 py-16 sm:px-6 lg:px-8 text-center">
    <h1 class="text-3xl sm:text-4xl font-bold mb-4">
      How can we help you?
    </h1>
    <p class="text-indigo-100 mb-8 text-lg">
      Search our help centre or browse categories below
    </p>

    <!-- Search Bar -->
    <div class="max-w-2xl mx-auto">
      <%= form_with url: help_centre_search_path(project_slug: @project.slug),
                    method: :get,
                    data: { turbo: false } do %>
        <div class="relative">
          <input type="text"
                 name="q"
                 placeholder="Search for articles..."
                 class="w-full px-6 py-4 pr-12 rounded-xl bg-white text-gray-900 text-lg shadow-lg
                        focus:ring-4 focus:ring-white/30 focus:outline-none
                        placeholder:text-gray-400">
<button type="submit" class="absolute right-4 top-1/2 -translate-y-1/2 text-gray-400 hover:text-gray-600 transition-colors">
            <%= heroicon "magnifying-glass", options: { class: "w-6 h-6" } %>
          </button>
        </div>
      <% end %>
    </div>
  </div>
</div>
