<div class="relative overflow-hidden" style="background: linear-gradient(to bottom right, var(--brand-primary), var(--brand-accent)); color: var(--brand-title)">
  <!-- Noise/grain texture overlay -->
  <div class="absolute inset-0 opacity-[0.12]" style="background-image: url('data:image/svg+xml,%3Csvg viewBox=%220 0 256 256%22 xmlns=%22http://www.w3.org/2000/svg%22%3E%3Cfilter id=%22noise%22%3E%3CfeTurbulence type=%22fractalNoise%22 baseFrequency=%220.9%22 numOctaves=%224%22 stitchTiles=%22stitch%22/%3E%3C/filter%3E%3Crect width=%22100%25%22 height=%22100%25%22 filter=%22url(%23noise)%22/%3E%3C/svg%3E'); background-size: 128px 128px;"></div>

  <!-- Dot pattern overlay -->
  <div class="absolute inset-0 opacity-60" style="background-image: radial-gradient(circle, rgba(255,255,255,0.12) 1px, transparent 1px); background-size: 24px 24px;"></div>

  <!-- Decorative blur orbs -->
  <div class="absolute -top-24 -right-24 w-96 h-96 rounded-full blur-3xl opacity-15" style="background: var(--brand-accent);"></div>
  <div class="absolute -bottom-32 -left-32 w-80 h-80 rounded-full blur-3xl opacity-20" style="background: var(--brand-primary);"></div>

  <!-- Geometric rings -->
  <div class="absolute -top-20 -left-20 w-72 h-72 rounded-full border border-white/[0.08]"></div>
  <div class="absolute -top-10 -left-10 w-52 h-52 rounded-full border border-white/[0.05]"></div>
  <div class="absolute -bottom-16 -right-16 w-64 h-64 rounded-full border border-white/[0.08]"></div>
  <div class="absolute -bottom-8 -right-8 w-44 h-44 rounded-full border border-white/[0.05]"></div>

  <div class="relative max-w-6xl mx-auto px-4 py-20 sm:py-24 sm:px-6 lg:px-8 text-center"
       data-controller="stagger">
    <h1 class="text-4xl sm:text-5xl font-bold mb-4 font-display tracking-tight"
        data-stagger-target="item">
      <%= @project.help_centre_title_or_default %>
    </h1>
    <p class="opacity-80 mb-10 text-lg max-w-2xl mx-auto"
       data-stagger-target="item">
      <%= @project.help_centre_tagline_or_default %>
    </p>

    <!-- Ask a Question -->
    <div class="max-w-2xl mx-auto" data-stagger-target="item">
      <%= form_with url: help_centre_ask_path,
                    method: :get,
                    data: { turbo: false } do %>
        <div class="relative group">
          <!-- Glow effect on focus -->
          <div class="absolute -inset-1 rounded-2xl opacity-0 group-focus-within:opacity-100 transition-opacity duration-300 blur-lg"
               style="background: rgba(255,255,255,0.2);"></div>
          <div class="relative">
            <input type="text"
                   name="q"
                   placeholder="Ask a question..."
                   class="w-full px-6 py-4 pr-12 rounded-xl bg-white/95 backdrop-blur-sm text-gray-900 text-lg shadow-2xl
                          focus:ring-4 focus:ring-white/30 focus:outline-none
                          placeholder:text-gray-400">
            <button type="submit" class="absolute right-4 top-1/2 -translate-y-1/2 text-gray-400 hover:text-gray-600 transition-colors">
              <%= heroicon "sparkles", options: { class: "w-6 h-6" } %>
            </button>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Wave divider -->
  <div class="absolute bottom-0 left-0 right-0">
    <svg viewBox="0 0 1440 48" fill="none" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="none" class="w-full h-8 sm:h-12">
      <path d="M0 48h1440V24c-180 20-360 24-540 12S540 8 360 16 180 40 0 32v16z" fill="var(--bg-primary)"/>
    </svg>
  </div>
</div>
