<%# locals: (section:, article_count:) %>
<%= link_to help_centre_section_path(project_slug: section.project.slug, section_slug: section.slug),
    class: "block bg-white rounded-xl shadow-sm hover:shadow-lg transition-all duration-200
           p-6 border border-gray-100 group" do %>
  <div class="flex items-start gap-4">
    <!-- Icon -->
    <div class="flex-shrink-0 w-12 h-12 bg-indigo-100 text-indigo-600 rounded-xl
                flex items-center justify-center group-hover:bg-indigo-600
                group-hover:text-white transition-colors">
      <%= render "help_centre/icons/#{section.icon_name}" %>
    </div>

    <div class="flex-1 min-w-0">
      <h3 class="text-lg font-semibold text-gray-900 group-hover:text-indigo-600
                 transition-colors"><%= section.name %></h3>
      <% if section.description.present? %>
        <p class="text-gray-500 text-sm mt-1 line-clamp-2"><%= section.description %></p>
      <% end %>
      <p class="text-xs text-gray-400 mt-2">
        <%= pluralize(article_count, "article") %>
      </p>
    </div>

    <!-- Arrow -->
    <svg class="w-5 h-5 text-gray-300 group-hover:text-indigo-500 group-hover:translate-x-1
                transition-all flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
    </svg>
  </div>
<% end %>
