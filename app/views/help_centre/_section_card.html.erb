<%# locals: (section:, article_count:) %>
<%= link_to help_centre_section_path(project_slug: section.project.slug, section_slug: section.slug),
    class: "block bg-white rounded-xl shadow-sm hover:shadow-lg transition-all duration-200
           p-6 border border-gray-100 group" do %>
  <div class="flex items-start gap-4">
    <!-- Icon -->
    <div class="flex-shrink-0 w-12 h-12 bg-brand-light rounded-xl
                flex items-center justify-center group-hover:bg-brand
                group-hover:text-white transition-colors"
         style="color: var(--brand-primary)">
      <%= heroicon section.icon_name, options: { class: "w-6 h-6" } %>
    </div>

    <div class="flex-1 min-w-0">
      <h3 class="text-lg font-semibold text-gray-900 group-hover:text-brand
                 transition-colors"><%= section.name %></h3>
      <% if section.description.present? %>
        <p class="text-gray-500 text-sm mt-1 line-clamp-2"><%= section.description %></p>
      <% end %>
      <p class="text-xs text-gray-400 mt-2">
        <%= pluralize(article_count, "article") %>
      </p>
    </div>

    <!-- Arrow -->
    <%= heroicon "chevron-right", options: { class: "w-5 h-5 text-gray-300 group-hover:text-brand group-hover:translate-x-1 transition-all flex-shrink-0 mt-1" } %>
  </div>
<% end %>
