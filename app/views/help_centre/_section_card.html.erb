<%# locals: (section:, articles:, article_count:) %>
<div class="bg-card rounded-2xl shadow-sm hover:shadow-xl transition-all duration-200
            p-6 border border-subtle"
     data-controller="hover-lift"
     data-action="mouseenter->hover-lift#enter mouseleave->hover-lift#leave">
  <%= link_to help_centre_section_path(section_slug: section.slug),
      class: "flex items-start gap-4 group" do %>
    <!-- Icon -->
    <div class="flex-shrink-0 w-12 h-12 bg-brand-light rounded-xl
                flex items-center justify-center group-hover:bg-brand
                group-hover:text-white transition-colors"
         style="color: var(--brand-primary)">
      <%= heroicon section.icon_name, options: { class: "w-6 h-6" } %>
    </div>

    <div class="flex-1 min-w-0">
      <h3 class="text-lg font-semibold text-heading group-hover:text-brand
                 transition-colors font-display"><%= section.name %></h3>
      <% if section.description.present? %>
        <p class="text-body text-sm mt-1 line-clamp-2"><%= section.description %></p>
      <% end %>
      <p class="text-xs text-muted mt-2">
        <%= pluralize(article_count, "article") %>
      </p>
    </div>

    <!-- Arrow -->
    <%= heroicon "chevron-right", options: { class: "w-5 h-5 text-muted group-hover:text-brand group-hover:translate-x-1 transition-all flex-shrink-0 mt-1" } %>
  <% end %>

  <!-- Article List -->
  <% if articles.any? %>
    <ul class="mt-4 pt-4 border-t border-subtle space-y-2">
      <% articles.limit(3).each do |article| %>
        <li>
          <%= link_to help_centre_article_path(section_slug: section.slug, article_slug: article.slug),
              class: "flex items-center gap-2 text-sm text-body hover:text-brand transition-colors" do %>
            <%= heroicon "document-text", options: { class: "w-4 h-4 text-muted flex-shrink-0" } %>
            <span class="truncate"><%= article.title %></span>
          <% end %>
        </li>
      <% end %>
      <% if article_count > 3 %>
        <li>
          <%= link_to help_centre_section_path(section_slug: section.slug),
              class: "text-sm text-brand hover:opacity-80 transition-opacity font-medium" do %>
            View all <%= article_count %> articles â†’
          <% end %>
        </li>
      <% end %>
    </ul>
  <% end %>
</div>
