<% content_for(:title) { "#{@article.title} - #{@project.name} Help Centre" } %>

<div class="lg:grid lg:grid-cols-4 lg:gap-8">
  <!-- Sidebar (Table of Contents) - Desktop -->
  <aside class="hidden lg:block lg:col-span-1">
    <div class="sticky top-24 space-y-6">
      <%= render "help_centre/table_of_contents", article: @article %>

      <!-- Section Navigation -->
      <% if @section && @section.articles.published.count > 1 %>
        <nav class="bg-gray-50 rounded-lg p-4">
          <h4 class="text-sm font-semibold text-gray-900 mb-3"><%= @section.name %></h4>
          <ul class="space-y-2 text-sm">
            <% @section.articles.published.limit(8).each do |art| %>
              <li>
                <%= link_to art.title.truncate(35),
                    help_centre_article_path(project_slug: @project.slug, id: art.id),
                    class: art.id == @article.id ?
                      "text-indigo-600 font-medium" :
                      "text-gray-600 hover:text-indigo-600 transition-colors" %>
              </li>
            <% end %>
            <% if @section.articles.published.count > 8 %>
              <li>
                <%= link_to "View all...",
                    help_centre_section_path(project_slug: @project.slug, section_slug: @section.slug),
                    class: "text-indigo-600 hover:text-indigo-800 text-xs font-medium" %>
              </li>
            <% end %>
          </ul>
        </nav>
      <% end %>
    </div>
  </aside>

  <!-- Main Content -->
  <div class="lg:col-span-3">
    <div class="bg-white shadow rounded-xl">
      <!-- Article Header -->
      <div class="px-6 py-5 border-b border-gray-200">
        <nav class="text-sm mb-3">
          <%= link_to "Help Centre",
              help_centre_path(project_slug: @project.slug),
              class: "text-indigo-600 hover:text-indigo-800 transition-colors" %>
          <% if @section %>
            <span class="mx-2 text-gray-400">/</span>
            <%= link_to @section.name,
                help_centre_section_path(project_slug: @project.slug, section_slug: @section.slug),
                class: "text-indigo-600 hover:text-indigo-800 transition-colors" %>
          <% end %>
        </nav>
        <h1 class="text-2xl font-bold text-gray-900"><%= @article.title %></h1>
        <% if @article.published_at.present? %>
          <p class="mt-2 text-sm text-gray-500">
            Updated <%= time_ago_in_words(@article.published_at) %> ago
          </p>
        <% end %>
      </div>

      <!-- Article Content -->
      <div class="px-6 py-6">
        <!-- Mobile TOC -->
        <div class="lg:hidden mb-8">
          <%= render "help_centre/table_of_contents", article: @article %>
        </div>

        <% if @article.structured? %>
          <%= render "help_centre/content/introduction", article: @article %>
          <%= render "help_centre/content/prerequisites", article: @article %>
          <%= render "help_centre/content/steps", article: @article %>
          <%= render "help_centre/content/tips", article: @article %>
          <%= render "help_centre/content/summary", article: @article %>
        <% else %>
          <div class="prose prose-lg max-w-none">
            <%= markdown(@article.content) %>
          </div>
        <% end %>

        <!-- Feedback -->
        <%= render "help_centre/article_feedback", article: @article %>
      </div>
    </div>

    <!-- Related Articles -->
    <% if @related_articles.any? %>
      <div class="mt-8">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Related articles</h3>
        <div class="grid gap-4 sm:grid-cols-2">
          <% @related_articles.each do |article| %>
            <%= render "help_centre/article_card", article: article %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
