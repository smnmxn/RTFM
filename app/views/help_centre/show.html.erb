<% content_for(:title) { "#{@article.title} - #{@project.name} Help Centre" } %>

<div class="lg:grid lg:grid-cols-4 lg:gap-8">
  <!-- Sidebar (Table of Contents) - Desktop -->
  <aside class="hidden lg:block lg:col-span-1">
    <div class="sticky top-24 space-y-6">
      <%= render "help_centre/table_of_contents", article: @article %>

      <!-- Section Navigation -->
      <% if @section && @section.articles.published.count > 1 %>
        <nav class="bg-muted rounded-lg p-4">
          <h4 class="text-sm font-semibold text-heading mb-3"><%= @section.name %></h4>
          <ul class="space-y-2 text-sm">
            <% @section.articles.published.limit(8).each do |art| %>
              <li>
                <%= link_to art.title.truncate(35),
                    help_centre_article_path(section_slug: art.section.slug, article_slug: art.slug),
                    class: art.id == @article.id ?
                      "text-brand font-medium" :
                      "text-body hover:text-brand transition-colors" %>
              </li>
            <% end %>
            <% if @section.articles.published.count > 8 %>
              <li>
                <%= link_to "View all...",
                    help_centre_section_path(section_slug: @section.slug),
                    class: "text-brand hover:opacity-80 text-xs font-medium" %>
              </li>
            <% end %>
          </ul>
        </nav>
      <% end %>
    </div>
  </aside>

  <!-- Main Content -->
  <div class="lg:col-span-3">
    <div class="bg-card shadow rounded-xl border border-subtle overflow-hidden">
      <!-- Brand accent stripe -->
      <div class="h-1" style="background: linear-gradient(to right, var(--brand-primary), var(--brand-accent));"></div>
      <!-- Article Header -->
      <div class="px-6 py-5 border-b border-default">
        <nav class="text-sm mb-3">
          <%= link_to "Help Centre",
              help_centre_path,
              class: "text-brand hover:opacity-80 transition-colors" %>
          <% if @section %>
            <%= heroicon "chevron-right", variant: :mini, options: { class: "inline w-4 h-4 mx-1 text-muted align-text-bottom" } %>
            <%= link_to @section.name,
                help_centre_section_path(section_slug: @section.slug),
                class: "text-brand hover:opacity-80 transition-colors" %>
          <% end %>
        </nav>
        <h1 class="text-2xl font-bold text-heading font-display"><%= @article.title %></h1>
        <% if @article.published_at.present? %>
          <p class="mt-2 text-sm text-body">
            Updated <%= time_ago_in_words(@article.published_at) %> ago
          </p>
        <% end %>
      </div>

      <!-- Article Content -->
      <div class="px-6 py-6">
        <!-- Mobile TOC -->
        <div class="lg:hidden mb-8">
          <%= render "help_centre/table_of_contents", article: @article %>
        </div>

        <% if @article.structured? %>
          <div data-controller="scroll-reveal"><%= render "help_centre/content/introduction", article: @article %></div>
          <div data-controller="scroll-reveal" data-scroll-reveal-delay-value="100"><%= render "help_centre/content/prerequisites", article: @article %></div>
          <div data-controller="scroll-reveal" data-scroll-reveal-delay-value="150"><%= render "help_centre/content/steps", article: @article %></div>
          <div data-controller="scroll-reveal" data-scroll-reveal-delay-value="200"><%= render "help_centre/content/tips", article: @article %></div>
          <div data-controller="scroll-reveal" data-scroll-reveal-delay-value="250"><%= render "help_centre/content/summary", article: @article %></div>
        <% else %>
          <div class="prose prose-lg max-w-none">
            <%= markdown(@article.content) %>
          </div>
        <% end %>

        <!-- Feedback -->
        <%= render "help_centre/article_feedback", article: @article %>
      </div>
    </div>

    <!-- Support Contact -->
    <%= render "help_centre/support_contact", project: @project %>

    <!-- Related Articles -->
    <% if @related_articles.any? %>
      <div class="mt-8">
        <h3 class="text-lg font-semibold text-heading mb-4 font-display">Related articles</h3>
        <div class="grid gap-4 sm:grid-cols-2" data-controller="stagger">
          <% @related_articles.each do |article| %>
            <div data-stagger-target="item">
              <%= render "help_centre/article_card", article: article %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
