<div class="min-h-screen bg-slate-50">
  <%= render "shared/public_header", active: "login" %>

  <div class="flex items-center justify-center px-4 py-12">
  <div class="max-w-2xl w-full bg-white rounded-2xl shadow-lg border border-slate-200 p-8">

    <!-- Title + Tagline -->
    <div class="text-center mb-8">
      <%= image_tag "logo.png", alt: "supportpages.io", class: "h-24 mx-auto" %>
      <p class="mt-3 text-lg text-slate-500">
          Support pages that write and maintain themselves - from your code
      </p>
    </div>

    <!-- Flash messages -->
    <% if flash[:notice] %>
      <div class="mb-6 bg-emerald-50 border border-emerald-200 text-emerald-700 px-4 py-3 rounded-lg text-sm">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <% if flash[:alert] %>
      <div class="mb-6 bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg text-sm">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <!-- Video placeholder -->
    <div class="mb-8">
      <div class="bg-slate-100 rounded-xl flex items-center justify-center cursor-pointer hover:bg-slate-50 transition-smooth group" style="aspect-ratio: 16/9;">
        <div class="w-20 h-20 bg-gradient-brand rounded-full flex items-center justify-center group-hover:scale-105 transition-transform shadow-lg">
          <svg class="w-8 h-8 text-white ml-1" fill="currentColor" viewBox="0 0 24 24">
            <path d="M8 5v14l11-7z"/>
          </svg>
        </div>
      </div>
      <p class="text-center text-sm text-slate-500 mt-3">Watch how it works</p>
    </div>

    <!-- Divider -->
    <div class="border-t border-slate-200 mb-8"></div>

    <!-- CTAs -->
    <div class="flex flex-col md:flex-row md:gap-0 gap-6">

      <!-- Left: Sign in with GitHub -->
      <div class="flex-1 md:pr-6">
        <h2 class="text-lg font-semibold text-slate-800 mb-1">Existing users</h2>
        <p class="text-sm text-slate-500 mb-4">
          <% if session[:invite_token].present? %>
            Your invite is ready
          <% else %>
            Sign in with your GitHub account
          <% end %>
        </p>
        <%= button_to "/auth/github", method: :post, data: { turbo: false }, class: "w-full flex items-center justify-center gap-3 px-5 py-3 bg-gradient-brand text-white font-medium rounded-lg hover:opacity-90 hover-lift transition-smooth" do %>
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"/>
          </svg>
          <span><%= session[:invite_token].present? ? "Create account" : "Sign in with GitHub" %></span>
        <% end %>
      </div>

      <!-- Divider -->
      <div class="border-t md:border-t-0 md:border-l border-slate-200"></div>

      <!-- Right: Waitlist -->
      <div class="flex-1 md:pl-6">
        <h2 class="text-lg font-semibold text-slate-800 mb-1">New here?</h2>
        <p class="text-sm text-slate-500 mb-4">Join the waitlist for early access</p>
        <%= form_with url: waitlist_path, method: :post, class: "flex gap-2" do |f| %>
          <%= f.email_field :email, placeholder: "you@example.com", required: true, class: "flex-1 px-3 py-2.5 border border-slate-200 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-violet-500 focus:border-violet-500 transition-smooth" %>
          <%= f.submit "Join", class: "btn-secondary-md" %>
        <% end %>
      </div>

    </div>

    <!-- Legal links -->
    <div class="mt-8 pt-6 border-t border-slate-200 text-center text-sm text-slate-500">
      <p>
        By signing in, you agree to our
        <a href="/legal/terms" class="text-violet-600 hover:underline">Terms of Service</a>
        and
        <a href="/legal/privacy" class="text-violet-600 hover:underline">Privacy Policy</a>
      </p>
    </div>

  </div>
  </div>
</div>
