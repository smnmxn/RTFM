<%# Standard error state with retry button %>
<%# Parameters: message:, retry_path:, retry_text: (optional), secondary_path: (optional), secondary_text: (optional) %>
<div class="text-center py-8">
  <div class="inline-flex items-center justify-center w-12 h-12 rounded-full bg-red-100 mb-4">
    <%= heroicon "x-circle", variant: :solid, options: { class: "w-6 h-6 text-red-600" } %>
  </div>
  <p class="text-red-600 mb-4"><%= message %></p>
  <div class="flex justify-center gap-3">
    <%= button_to local_assigns[:retry_text] || "Retry", retry_path,
        method: :post,
        class: "px-5 py-2 bg-red-600 text-white font-medium rounded-lg hover:bg-red-700 transition-smooth" %>
    <% if local_assigns[:secondary_path] %>
      <%= link_to local_assigns[:secondary_text] || "Continue", secondary_path,
          class: "px-5 py-2 app-surface-alt app-text-secondary font-medium rounded-lg hover:app-surface-alt transition-smooth" %>
    <% end %>
  </div>
</div>
