<div data-controller="notification-prompt" class="shrink-0">
  <%# Prompt state (default permission) %>
  <div data-notification-prompt-target="prompt" class="hidden">
    <div class="flex items-center gap-2 pl-3 pr-2 py-1.5 rounded-full bg-white border border-slate-200 shadow-sm">
      <%= heroicon "bell", variant: :outline, options: { class: "w-4 h-4 text-slate-400" } %>
      <button type="button"
              data-action="notification-prompt#enable"
              class="text-xs font-medium text-violet-600 hover:text-violet-700 whitespace-nowrap">
        Notify me when done
      </button>
      <button type="button"
              data-action="notification-prompt#dismiss"
              class="text-slate-300 hover:text-slate-400 ml-0.5">
        <svg class="w-3.5 h-3.5" viewBox="0 0 20 20" fill="currentColor">
          <path d="M6.28 5.22a.75.75 0 00-1.06 1.06L8.94 10l-3.72 3.72a.75.75 0 101.06 1.06L10 11.06l3.72 3.72a.75.75 0 101.06-1.06L11.06 10l3.72-3.72a.75.75 0 00-1.06-1.06L10 8.94 6.28 5.22z" />
        </svg>
      </button>
    </div>
  </div>

  <%# Granted state %>
  <div data-notification-prompt-target="granted" class="hidden">
    <div class="flex items-center gap-1.5 px-3 py-1.5 rounded-full bg-green-50 border border-green-200">
      <%= heroicon "bell-alert", variant: :solid, options: { class: "w-4 h-4 text-green-500" } %>
      <span class="text-xs font-medium text-green-700 whitespace-nowrap">Notifications on</span>
    </div>
  </div>
</div>
