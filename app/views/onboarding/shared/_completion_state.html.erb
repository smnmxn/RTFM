<%# Standard completion celebration UI %>
<%# Parameters: title:, message:, icon: (optional, default: "check-circle"), redirect_url: (optional) %>
<div class="text-center py-8"
     <% if local_assigns[:redirect_url] %>
       data-controller="redirect"
       data-redirect-url-value="<%= redirect_url %>"
     <% end %>>
  <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-green-100 mb-4">
    <%= heroicon(local_assigns[:icon] || "check-circle", variant: :solid, options: { class: "w-8 h-8 text-green-600" }) %>
  </div>
  <h3 class="text-lg font-semibold app-text mb-2"><%= title %></h3>
  <p class="app-text-secondary"><%= message %></p>
</div>
