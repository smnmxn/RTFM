<div class="app-surface app-shadow-sm rounded-xl app-border overflow-hidden">
  <%= render "onboarding/shared/step_header",
      title: "Choose your repository",
      subtitle: "We'll analyze the code and suggest what to document." %>

  <%= turbo_frame_tag "repository_list",
      src: repositories_projects_path(onboarding_project_slug: @project.slug),
      loading: :lazy do %>
    <div class="p-8 text-center">
      <%= spinner_icon(size: "h-8 w-8", color: "app-accent-text", extra_class: "mx-auto") %>
      <p class="mt-3 text-sm app-text-secondary">Loading your repositories...</p>
    </div>
  <% end %>
</div>
