<div class="bg-white shadow-sm rounded-xl border border-slate-200 overflow-hidden">
  <%= render "onboarding/shared/step_header",
      title: "Choose your repository",
      subtitle: "We'll analyze the code and suggest what to document." %>

  <%= turbo_frame_tag "repository_list",
      src: repositories_projects_path(onboarding_project_slug: @project.slug),
      loading: :lazy do %>
    <div class="p-8 text-center">
      <%= spinner_icon(size: "h-8 w-8", color: "text-violet-600", extra_class: "mx-auto") %>
      <p class="mt-3 text-sm text-slate-500">Loading your repositories...</p>
    </div>
  <% end %>
</div>
