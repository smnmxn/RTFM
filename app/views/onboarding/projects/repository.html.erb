<div class="bg-white shadow rounded-lg">
  <div class="px-6 py-4 border-b border-gray-200">
    <h2 class="text-xl font-semibold text-gray-900">Connect a GitHub Repository</h2>
    <p class="mt-1 text-sm text-gray-500">
      Select the repository you want to create documentation for.
    </p>
  </div>

  <%= turbo_frame_tag "repository_list",
      src: repositories_projects_path(onboarding_project_id: @project.id),
      loading: :lazy do %>
    <div class="p-6 text-center">
      <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-indigo-600 mx-auto"></div>
      <p class="mt-2 text-sm text-gray-500">Loading your repositories...</p>
    </div>
  <% end %>
</div>
