  <div class="px-6 py-5 border-b border-slate-100">
    <h2 class="text-xl font-semibold text-slate-900">We found these topics</h2>
    <p class="mt-1 text-sm text-slate-500">
      Accept the sections you'd like to generate documentation for.
    </p>
  </div>
<div id="pending-sections-list">
  <% if project.sections_being_generated? %>
    <div class="px-4 py-3 bg-gradient-brand text-white text-sm flex items-center justify-center">
      <svg class="animate-spin h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24">
        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
      </svg>
      Generating suggestions...
    </div>
    <div class="p-6">
      <% if project.contextual_questions.present? %>
        <%= render "onboarding/projects/contextual_questions", project: project %>
      <% else %>
        <div class="py-8 text-center text-slate-500">Almost there...</div>
      <% end %>
    </div>
  <% elsif sections.any? %>
    <div class="divide-y divide-slate-100">
      <% sections.each do |section| %>
        <%= render "sections/pending_card", section: section %>
      <% end %>
    </div>
  <% else %>
    <div class="p-6 text-center">
      <p class="text-slate-600 mb-6">All done!</p>
      <%= link_to "View inbox",
          project_path(project),
          class: "px-6 py-3 bg-gradient-brand text-white font-medium rounded-lg hover:opacity-90 transition-smooth" %>
    </div>
  <% end %>
</div>
