<% if project.sections_being_generated? %>
  <div class="p-6 text-center">
    <div class="animate-spin rounded-full h-10 w-10 border-b-2 border-indigo-600 mx-auto"></div>
    <p class="mt-4 text-gray-600">Generating section suggestions...</p>
    <p class="mt-1 text-sm text-gray-500">This usually takes about a minute.</p>
  </div>
<% elsif sections.any? %>
  <div class="divide-y divide-gray-200">
    <% sections.each do |section| %>
      <%= render "sections/pending_card", section: section %>
    <% end %>
  </div>
<% else %>
  <div class="p-6 text-center">
    <div class="flex items-center justify-center mb-4">
      <div class="h-12 w-12 rounded-full bg-green-100 flex items-center justify-center">
        <svg class="h-6 w-6 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
        </svg>
      </div>
    </div>
    <% accepted_count = project.sections.accepted.count %>
    <% if accepted_count > 0 %>
      <p class="text-lg font-medium text-gray-900 mb-2">Sections selected!</p>
      <p class="text-sm text-gray-500 mb-4">
        We're generating article suggestions for your <%= pluralize(accepted_count, "section") %>.
        They'll appear in your inbox as they're ready.
      </p>
    <% else %>
      <p class="text-lg font-medium text-gray-900 mb-2">All sections reviewed!</p>
      <p class="text-sm text-gray-500 mb-4">
        No sections accepted. You can add sections manually later.
      </p>
    <% end %>
    <%= link_to "View my Inbox",
        project_path(project),
        class: "inline-flex items-center px-6 py-3 bg-indigo-600 text-white font-medium rounded-lg hover:bg-indigo-700" %>
  </div>
<% end %>
