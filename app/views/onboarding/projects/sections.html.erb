<%= turbo_stream_from @project, :sections %>
<%= turbo_stream_from @project, :onboarding %>

<div class="bg-white shadow rounded-lg">
  <div class="px-6 py-4 border-b border-gray-200">
    <h2 class="text-xl font-semibold text-gray-900">Review Help Centre Sections</h2>
    <p class="mt-1 text-sm text-gray-500">
      We've suggested sections based on your codebase. Accept or dismiss each one.
    </p>
  </div>

  <div id="onboarding-sections-status">
    <%= render "onboarding/projects/sections_status", project: @project %>
  </div>

  <div id="pending-sections-list">
    <%= render "onboarding/projects/sections_list", project: @project, sections: @pending_sections %>
  </div>

  <div id="onboarding-sections-navigation">
    <%= render "onboarding/projects/sections_navigation", project: @project, can_continue: @pending_sections.empty? && !@project.sections_being_generated? %>
  </div>
</div>

<% if @accepted_sections.any? %>
  <div class="mt-6 bg-white shadow rounded-lg">
    <div class="px-6 py-4 border-b border-gray-200">
      <h3 class="text-lg font-medium text-gray-900">Accepted Sections (<%= @accepted_sections.count %>)</h3>
      <p class="text-xs text-gray-400 mt-1">Recommendations are being generated for these sections in the background.</p>
    </div>
    <ul class="divide-y divide-gray-200">
      <% @accepted_sections.each do |section| %>
        <li class="px-6 py-3 flex items-center justify-between">
          <div class="flex items-center">
            <svg class="h-5 w-5 text-green-500 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            <div>
              <span class="text-gray-900 font-medium"><%= section.name %></span>
              <p class="text-sm text-gray-500"><%= section.description %></p>
            </div>
          </div>
          <% if section.recommendations_status == "running" %>
            <span class="inline-flex items-center text-xs text-indigo-600">
              <svg class="animate-spin h-3 w-3 mr-1" fill="none" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4z"></path>
              </svg>
              Generating...
            </span>
          <% elsif section.recommendations_status == "completed" %>
            <span class="inline-flex items-center text-xs text-green-600">
              <svg class="h-3 w-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
              </svg>
              Ready
            </span>
          <% elsif section.recommendations_status == "failed" %>
            <span class="inline-flex items-center text-xs text-red-600">
              <svg class="h-3 w-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
              </svg>
              Failed
            </span>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>
