<div class="bg-white shadow-sm rounded-xl border border-slate-200 overflow-hidden">
  <%= render "onboarding/shared/step_header",
      title: "Create your help centre",
      subtitle: "Connect a GitHub repository and we'll analyse your code to generate documentation." %>

  <div class="p-6 text-center">
    <%= form_with url: onboarding_projects_path, method: :post do |f| %>
      <div class="pt-2">
        <%= f.submit "Get started", class: "w-full btn-primary-lg cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>
