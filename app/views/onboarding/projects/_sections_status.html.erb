<% if project.sections_generation_status == "failed" %>
  <div class="px-6 py-3 bg-red-50 text-red-700 text-sm flex items-center justify-between">
    <div class="flex items-center">
      <%= heroicon "x-circle", variant: :solid, options: { class: "h-4 w-4 mr-2" } %>
      Failed to generate topic suggestions. You can add them manually or retry.
    </div>
    <%= button_to "Retry",
        retry_sections_onboarding_project_path(project),
        method: :post,
        class: "px-3 py-1 bg-red-600 text-white text-xs font-medium rounded hover:bg-red-700 transition-smooth" %>
  </div>
<% end %>
