<% if project.sections_generation_status == "failed" %>
  <div class="px-6 py-4 bg-red-50 border-b border-red-100">
    <div class="flex items-center justify-between">
      <div class="flex items-center text-red-700">
        <%= heroicon "x-circle", variant: :solid, options: { class: "h-5 w-5 mr-2" } %>
        <span class="text-sm">Failed to generate topic suggestions. You can add them manually or retry.</span>
      </div>
      <%= button_to "Retry",
          retry_sections_onboarding_project_path(project),
          method: :post,
          class: "btn-danger-sm" %>
    </div>
  </div>
<% end %>
