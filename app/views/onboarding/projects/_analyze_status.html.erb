<% case project.analysis_status %>
<% when nil, "" %>
  <div class="text-center py-8">
    <div class="flex items-center justify-center mb-4">
      <svg class="h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
      </svg>
    </div>
    <p class="text-gray-600 mb-4">Ready to analyze your codebase.</p>
    <%= button_to "Start Analysis",
        start_analysis_onboarding_project_path(project),
        method: :post,
        class: "px-6 py-3 bg-indigo-600 text-white font-medium rounded-lg hover:bg-indigo-700" %>
  </div>

<% when "pending", "running" %>
  <div class="text-center py-8">
    <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-indigo-600 mx-auto"></div>
    <p class="mt-4 text-lg font-medium text-gray-900">Analyzing your codebase...</p>
    <p class="mt-1 text-sm text-gray-500">This usually takes 1-3 minutes.</p>
    <div class="mt-6 max-w-sm mx-auto">
      <div class="text-left text-sm text-gray-600 space-y-2">
        <p class="flex items-center">
          <svg class="w-4 h-4 mr-2 text-indigo-500" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
          </svg>
          Cloning repository
        </p>
        <p class="flex items-center">
          <svg class="w-4 h-4 mr-2 text-indigo-500 animate-pulse" fill="currentColor" viewBox="0 0 20 20">
            <circle cx="10" cy="10" r="8" fill="none" stroke="currentColor" stroke-width="2"/>
          </svg>
          Analyzing code structure
        </p>
        <p class="flex items-center text-gray-400">
          <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
            <circle cx="10" cy="10" r="8" fill="none" stroke="currentColor" stroke-width="2"/>
          </svg>
          Generating documentation suggestions
        </p>
      </div>
    </div>
  </div>

<% when "completed" %>
  <% if project.sections_being_generated? %>
    <%# Still generating sections %>
    <div class="text-center py-8">
      <div class="flex items-center justify-center mb-4">
        <div class="h-12 w-12 rounded-full bg-green-100 flex items-center justify-center">
          <svg class="h-6 w-6 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
          </svg>
        </div>
      </div>
      <p class="text-lg font-medium text-gray-900">Analysis Complete!</p>
      <% if project.project_overview.present? %>
        <p class="mt-2 text-gray-600 max-w-lg mx-auto"><%= project.project_overview %></p>
      <% end %>
      <div class="mt-6">
        <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-indigo-600 mx-auto"></div>
        <p class="mt-3 text-sm text-gray-500">Generating section suggestions...</p>
      </div>
    </div>
  <% elsif project.sections.pending.any? || project.sections.accepted.any? %>
    <%# Sections ready %>
    <div class="text-center py-8">
      <div class="flex items-center justify-center mb-4">
        <div class="h-12 w-12 rounded-full bg-green-100 flex items-center justify-center">
          <svg class="h-6 w-6 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
          </svg>
        </div>
      </div>
      <p class="text-lg font-medium text-gray-900">Analysis Complete!</p>
      <% if project.project_overview.present? %>
        <p class="mt-2 text-gray-600 max-w-lg mx-auto"><%= project.project_overview %></p>
      <% end %>
      <%= link_to "Continue to Sections",
          sections_onboarding_project_path(project),
          class: "mt-6 inline-block px-6 py-3 bg-indigo-600 text-white font-medium rounded-lg hover:bg-indigo-700" %>
    </div>
  <% elsif project.sections_generation_status == "failed" %>
    <%# Section generation failed %>
    <div class="text-center py-8">
      <div class="flex items-center justify-center mb-4">
        <div class="h-12 w-12 rounded-full bg-yellow-100 flex items-center justify-center">
          <svg class="h-6 w-6 text-yellow-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
          </svg>
        </div>
      </div>
      <p class="text-lg font-medium text-gray-900">Analysis Complete!</p>
      <p class="mt-2 text-sm text-yellow-600">Section suggestions couldn't be generated, but you can add them manually.</p>
      <%= link_to "Continue to Sections",
          sections_onboarding_project_path(project),
          class: "mt-6 inline-block px-6 py-3 bg-indigo-600 text-white font-medium rounded-lg hover:bg-indigo-700" %>
    </div>
  <% else %>
    <%# Waiting for sections job to start %>
    <div class="text-center py-8">
      <div class="flex items-center justify-center mb-4">
        <div class="h-12 w-12 rounded-full bg-green-100 flex items-center justify-center">
          <svg class="h-6 w-6 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
          </svg>
        </div>
      </div>
      <p class="text-lg font-medium text-gray-900">Analysis Complete!</p>
      <% if project.project_overview.present? %>
        <p class="mt-2 text-gray-600 max-w-lg mx-auto"><%= project.project_overview %></p>
      <% end %>
      <div class="mt-6">
        <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-indigo-600 mx-auto"></div>
        <p class="mt-3 text-sm text-gray-500">Preparing section suggestions...</p>
      </div>
    </div>
  <% end %>

<% when "failed" %>
  <div class="text-center py-8">
    <div class="flex items-center justify-center mb-4">
      <div class="h-12 w-12 rounded-full bg-red-100 flex items-center justify-center">
        <svg class="h-6 w-6 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
        </svg>
      </div>
    </div>
    <p class="text-lg font-medium text-red-600">Analysis Failed</p>
    <p class="mt-1 text-gray-500">Something went wrong. Please try again.</p>
    <%= button_to "Retry Analysis",
        start_analysis_onboarding_project_path(project),
        method: :post,
        class: "mt-4 px-6 py-3 bg-red-600 text-white font-medium rounded-lg hover:bg-red-700" %>
  </div>
<% end %>
