<div data-controller="section-edit-modal"
     data-section-edit-modal-url-value="<%= project_section_path(project, section) %>">

  <!-- Backdrop -->
  <div data-section-edit-modal-target="backdrop"
       data-action="click->section-edit-modal#close"
       class="hidden fixed inset-0 z-40"
       style="background-color: rgba(0, 0, 0, 0.5);">
  </div>

  <!-- Modal Dialog -->
  <div data-section-edit-modal-target="dialog"
       class="hidden fixed inset-0 z-50">
    <div class="flex min-h-full items-center justify-center p-4">
      <div class="relative w-full max-w-lg app-surface rounded-lg shadow-xl border app-border"
           data-action="click->section-edit-modal#stopPropagation">

        <!-- Header -->
        <div class="px-6 py-4 border-b app-border">
          <div class="flex items-center justify-between">
            <h3 class="text-lg font-semibold app-text">
              Edit Section
            </h3>
            <button type="button"
                    data-action="section-edit-modal#close"
                    class="app-text-muted hover:app-text-secondary">
              <%= heroicon "x-mark", options: { class: "h-5 w-5" } %>
            </button>
          </div>
        </div>

        <!-- Content -->
        <div class="px-6 py-4 space-y-4">
          <!-- Name (required) -->
          <div>
            <label for="edit-section-name-<%= section.id %>" class="block text-sm font-medium app-text-secondary mb-1">
              Name <span class="text-red-500">*</span>
            </label>
            <input type="text"
                   id="edit-section-name-<%= section.id %>"
                   data-section-edit-modal-target="name"
                   value="<%= section.name %>"
                   class="w-full px-3 py-2 text-sm border app-border-strong rounded-lg focus:outline-none app-focus-ring"
                   placeholder="e.g. API Integration">
          </div>

          <!-- Description (optional) -->
          <div>
            <label for="edit-section-description-<%= section.id %>" class="block text-sm font-medium app-text-secondary mb-1">
              Description
            </label>
            <textarea id="edit-section-description-<%= section.id %>"
                      data-section-edit-modal-target="description"
                      rows="3"
                      class="w-full px-3 py-2 text-sm border app-border-strong rounded-lg focus:outline-none app-focus-ring"
                      placeholder="Brief description of what articles belong in this section"><%= section.description %></textarea>
          </div>

          <!-- Icon picker -->
          <div>
            <label class="block text-sm font-medium app-text-secondary mb-2">Icon</label>
            <div class="grid grid-cols-6 gap-2" data-section-edit-modal-target="iconGrid">
              <% Section::ICON_OPTIONS.each do |icon_name| %>
                <button type="button"
                        data-action="section-edit-modal#selectIcon"
                        data-icon="<%= icon_name %>"
                        class="<%= section.icon_name == icon_name ? 'ring-2 ring-[color:var(--app-focus-ring)] app-accent-light' : 'hover:app-surface-alt' %> p-2 rounded-lg border app-border flex items-center justify-center transition-all">
                  <%= heroicon icon_name, options: { class: "w-5 h-5 app-text-secondary" } %>
                </button>
              <% end %>
            </div>
            <input type="hidden" data-section-edit-modal-target="icon" value="<%= section.icon_name %>">
          </div>

          <!-- Visible checkbox -->
          <div class="flex items-center">
            <input type="checkbox"
                   id="edit-section-visible-<%= section.id %>"
                   data-section-edit-modal-target="visible"
                   <%= "checked" if section.visible? %>
                   class="h-4 w-4 rounded app-border-strong text-[color:var(--app-accent)] focus:ring-[color:var(--app-focus-ring)]">
            <label for="edit-section-visible-<%= section.id %>" class="ml-2 block text-sm app-text-secondary">
              Visible in Help Centre
            </label>
          </div>
        </div>

        <!-- Footer -->
        <div class="px-6 py-4 app-bg border-t app-border rounded-b-lg flex justify-end gap-3">
          <button type="button"
                  data-action="section-edit-modal#close"
                  class="px-4 py-2 text-sm font-medium app-text-secondary app-surface border app-border-strong rounded-lg hover:app-surface-alt">
            Cancel
          </button>
          <button type="button"
                  data-action="section-edit-modal#submit"
                  data-section-edit-modal-target="submitButton"
                  class="px-4 py-2 text-sm font-medium text-white app-accent-bg rounded-lg hover:app-accent-bg disabled:opacity-50">
            Save Changes
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
