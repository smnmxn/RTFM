<div data-controller="section-edit-modal"
     data-section-edit-modal-url-value="<%= project_section_path(project, section) %>">

  <!-- Backdrop -->
  <div data-section-edit-modal-target="backdrop"
       data-action="click->section-edit-modal#close"
       class="hidden fixed inset-0 z-40"
       style="background-color: rgba(0, 0, 0, 0.5);">
  </div>

  <!-- Modal Dialog -->
  <div data-section-edit-modal-target="dialog"
       class="hidden fixed inset-0 z-50">
    <div class="flex min-h-full items-center justify-center p-4">
      <div class="relative w-full max-w-lg bg-white rounded-lg shadow-xl border border-gray-200"
           data-action="click->section-edit-modal#stopPropagation">

        <!-- Header -->
        <div class="px-6 py-4 border-b border-gray-200">
          <div class="flex items-center justify-between">
            <h3 class="text-lg font-semibold text-gray-900">
              Edit Section
            </h3>
            <button type="button"
                    data-action="section-edit-modal#close"
                    class="text-gray-400 hover:text-gray-600">
              <%= heroicon "x-mark", options: { class: "h-5 w-5" } %>
            </button>
          </div>
        </div>

        <!-- Content -->
        <div class="px-6 py-4 space-y-4">
          <!-- Name (required) -->
          <div>
            <label for="edit-section-name-<%= section.id %>" class="block text-sm font-medium text-gray-700 mb-1">
              Name <span class="text-red-500">*</span>
            </label>
            <input type="text"
                   id="edit-section-name-<%= section.id %>"
                   data-section-edit-modal-target="name"
                   value="<%= section.name %>"
                   class="w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"
                   placeholder="e.g. API Integration">
          </div>

          <!-- Description (optional) -->
          <div>
            <label for="edit-section-description-<%= section.id %>" class="block text-sm font-medium text-gray-700 mb-1">
              Description
            </label>
            <textarea id="edit-section-description-<%= section.id %>"
                      data-section-edit-modal-target="description"
                      rows="3"
                      class="w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"
                      placeholder="Brief description of what articles belong in this section"><%= section.description %></textarea>
          </div>

          <!-- Visible checkbox -->
          <div class="flex items-center">
            <input type="checkbox"
                   id="edit-section-visible-<%= section.id %>"
                   data-section-edit-modal-target="visible"
                   <%= "checked" if section.visible? %>
                   class="h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500">
            <label for="edit-section-visible-<%= section.id %>" class="ml-2 block text-sm text-gray-700">
              Visible in Help Centre
            </label>
          </div>
        </div>

        <!-- Footer -->
        <div class="px-6 py-4 bg-gray-50 border-t border-gray-200 rounded-b-lg flex justify-end gap-3">
          <button type="button"
                  data-action="section-edit-modal#close"
                  class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50">
            Cancel
          </button>
          <button type="button"
                  data-action="section-edit-modal#submit"
                  data-section-edit-modal-target="submitButton"
                  class="px-4 py-2 text-sm font-medium text-white bg-indigo-600 rounded-lg hover:bg-indigo-700 disabled:opacity-50">
            Save Changes
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
