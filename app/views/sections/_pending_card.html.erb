<%= tag.div id: dom_id(section), class: "p-4 flex items-start justify-between" do %>
  <div class="flex-1">
    <p class="font-medium text-gray-900"><%= section.name %></p>
    <p class="text-sm text-gray-600 mt-1"><%= section.description %></p>
    <% if section.justification.present? %>
      <p class="text-xs text-gray-400 mt-1">Why: <%= section.justification %></p>
    <% end %>
  </div>
  <div class="ml-4 flex gap-2">
    <%= button_to "Accept", accept_project_section_path(section.project, section),
        method: :post,
        class: "text-sm text-indigo-600 hover:text-indigo-800 font-medium cursor-pointer" %>
    <%= button_to "Dismiss", reject_project_section_path(section.project, section),
        method: :post,
        class: "text-sm text-gray-500 hover:text-red-600 cursor-pointer" %>
  </div>
<% end %>
