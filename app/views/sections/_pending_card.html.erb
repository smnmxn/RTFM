<%= tag.div id: dom_id(section), class: "p-5 flex items-start justify-between hover:bg-slate-50 transition-smooth" do %>
  <div class="flex-1">
    <p class="font-medium text-slate-900"><%= section.name %></p>
    <p class="text-sm text-slate-500 mt-1"><%= section.description %></p>
  </div>
  <div class="ml-4 flex gap-3">
    <%= button_to "Accept", accept_project_section_path(section.project, section),
        method: :post,
        class: "px-3 py-1.5 text-sm bg-emerald-500 text-white font-medium rounded-lg hover:bg-emerald-600 transition-smooth cursor-pointer" %>
    <%= button_to "Skip", reject_project_section_path(section.project, section),
        method: :post,
        class: "px-3 py-1.5 text-sm bg-white text-slate-500 border border-slate-200 font-medium rounded-lg hover:bg-slate-50 hover:border-slate-300 transition-smooth cursor-pointer" %>
  </div>
<% end %>
