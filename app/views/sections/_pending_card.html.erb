<%= tag.div id: dom_id(section), class: "p-5 flex items-start justify-between hover:bg-slate-50 transition-smooth" do %>
  <div class="flex-1">
    <p class="font-medium text-slate-900"><%= section.name %></p>
    <p class="text-sm text-slate-500 mt-1"><%= section.description %></p>
  </div>
  <div class="ml-4 flex items-center gap-2">
    <%= button_to "Skip", reject_project_section_path(section.project, section),
        method: :post,
        class: "px-3 py-1.5 text-sm border border-red-300 text-red-700 font-medium rounded-lg hover:bg-red-50 cursor-pointer" %>
    <%= button_to "Accept", accept_project_section_path(section.project, section),
        method: :post,
        class: "px-4 py-1.5 text-sm bg-green-600 text-white font-medium rounded-lg hover:bg-green-700 cursor-pointer" %>
  </div>
<% end %>
