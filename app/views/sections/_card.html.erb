<%= tag.div id: dom_id(section), class: "p-4 flex items-center justify-between hover:app-surface-alt" do %>
  <div class="flex items-center gap-4 flex-1">
<div class="flex-shrink-0 app-text-muted">
      <%= heroicon "bars-3", options: { class: "w-5 h-5" } %>
    </div>
    <div class="flex-1 min-w-0">
      <div class="flex items-center gap-2">
        <h4 class="font-medium app-text"><%= section.name %></h4>
        <% unless section.visible? %>
          <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium app-surface-alt app-text-secondary">Hidden</span>
        <% end %>
        <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium <%= section_type_badge_class(section) %>">
          <%= section.section_type.humanize %>
        </span>
      </div>
      <% if section.description.present? %>
        <p class="text-sm app-text-secondary truncate"><%= section.description %></p>
      <% end %>
      <div class="text-xs app-text-muted mt-1">
        <%= section.articles.published.count %> published
        <span class="mx-1">&middot;</span>
        <%= section.articles.drafts.count %> drafts
        <span class="mx-1">&middot;</span>
        <%= section.recommendations.pending.count %> pending recommendations
      </div>
    </div>
  </div>

  <div class="flex items-center gap-2 ml-4">
    <% if project.analysis_status == "completed" %>
      <%= button_to "Generate",
          generate_recommendations_project_section_path(project, section),
          method: :post,
          class: "inline-flex items-center px-2.5 py-1.5 text-xs font-medium rounded text-green-700 bg-green-50 hover:bg-green-100" %>
    <% end %>
    <%= link_to "View",
        project_section_path(project, section),
        class: "inline-flex items-center px-2.5 py-1.5 text-xs font-medium rounded app-accent-text app-accent-light hover:opacity-80" %>
    <%= link_to "Edit",
        edit_project_section_path(project, section),
        class: "inline-flex items-center px-2.5 py-1.5 text-xs font-medium rounded app-text-secondary app-surface-alt hover:app-surface-alt" %>
  </div>
<% end %>
