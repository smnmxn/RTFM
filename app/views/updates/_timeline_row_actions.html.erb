<% is_commit = item[:type] == :commit %>
<% item_id = is_commit ? "commit-#{item[:short_sha]}" : "pr-#{item[:pr_number]}" %>
<% any_running = local_assigns.fetch(:any_running, false) %>
<%= tag.div id: "timeline-actions-#{item_id}", class: "flex items-center gap-2 flex-shrink-0" do %>
  <% if update && update.analysis_status == "running" %>
    <span class="inline-flex items-center gap-1 px-2 py-1 text-xs font-medium app-accent-text app-accent-light rounded">
      <%= spinner_icon(size: "w-3 h-3") %>
      Analyzing...
    </span>
  <% elsif update %>
    <% if any_running %>
      <span class="inline-flex items-center px-2 py-1 text-xs font-medium app-text-muted app-surface-alt rounded cursor-not-allowed">
        Re-analyze
      </span>
    <% elsif is_commit %>
      <%= button_to "Re-analyze",
          analyze_commit_project_path(project, commit_sha: item[:sha]),
          params: { commit_title: item[:title], commit_url: item[:url], commit_message: item[:message] },
          class: "inline-flex items-center px-2 py-1 text-xs font-medium app-accent-text app-accent-light hover:opacity-80 rounded",
          data: { turbo_confirm: "Re-analyze commit #{item[:short_sha]}? This will replace the existing analysis." } %>
    <% else %>
      <%= button_to "Re-analyze",
          analyze_pull_request_project_path(project, pr_number: item[:pr_number]),
          params: { pr_title: item[:title], pr_url: item[:url], pr_body: "", merge_commit_sha: item[:merge_commit_sha] },
          class: "inline-flex items-center px-2 py-1 text-xs font-medium app-accent-text app-accent-light hover:opacity-80 rounded",
          data: { turbo_confirm: "Re-analyze PR ##{item[:pr_number]}? This will replace the existing analysis." } %>
    <% end %>
  <% elsif is_before_cutoff %>
    <span class="inline-flex items-center px-3 py-1 text-xs font-medium app-text-muted app-surface-alt rounded cursor-not-allowed"
          title="Before latest analysis - analyze newer items first">
      Analyze
    </span>
  <% elsif any_running %>
    <span class="inline-flex items-center px-3 py-1 text-xs font-medium app-text-muted app-surface-alt rounded cursor-not-allowed"
          title="Another analysis is in progress">
      Analyze
    </span>
  <% else %>
    <% if is_commit %>
      <%= button_to "Analyze",
          analyze_commit_project_path(project, commit_sha: item[:sha]),
          params: { commit_title: item[:title], commit_url: item[:url], commit_message: item[:message] },
          class: "inline-flex items-center px-3 py-1 text-xs font-medium text-white app-accent-bg hover:app-accent-bg rounded" %>
    <% else %>
      <%= button_to "Analyze",
          analyze_pull_request_project_path(project, pr_number: item[:pr_number]),
          params: { pr_title: item[:title], pr_url: item[:url], pr_body: "", merge_commit_sha: item[:merge_commit_sha] },
          class: "inline-flex items-center px-3 py-1 text-xs font-medium text-white app-accent-bg hover:app-accent-bg rounded" %>
    <% end %>
  <% end %>
<% end %>
