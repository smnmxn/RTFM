<%= tag.div id: "commit-actions-#{commit[:short_sha]}", class: "flex items-center gap-2 flex-shrink-0" do %>
  <% if update %>
    <% if update.analysis_status == "running" %>
      <span class="inline-flex items-center gap-1 px-2 py-1 text-xs font-medium text-indigo-700 bg-indigo-50 rounded">
        <svg class="w-3 h-3 animate-spin" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
        Analyzing...
      </span>
    <% else %>
      <%= link_to "View", project_path(project, anchor: dom_id(update)),
          class: "inline-flex items-center px-2 py-1 text-xs font-medium text-gray-700 bg-gray-100 hover:bg-gray-200 rounded",
          data: { turbo_frame: "_top" } %>
      <%= button_to "Re-analyze",
          analyze_commit_project_path(project, commit_sha: commit[:sha]),
          params: { commit_title: commit[:title], commit_url: commit[:html_url], commit_message: commit[:message] },
          class: "inline-flex items-center px-2 py-1 text-xs font-medium text-indigo-700 bg-indigo-50 hover:bg-indigo-100 rounded",
          data: { turbo_confirm: "Re-analyze commit #{commit[:short_sha]}? This will replace the existing analysis." } %>
    <% end %>
  <% else %>
    <%= button_to "Analyze",
        analyze_commit_project_path(project, commit_sha: commit[:sha]),
        params: { commit_title: commit[:title], commit_url: commit[:html_url], commit_message: commit[:message] },
        class: "inline-flex items-center px-3 py-1 text-xs font-medium text-white bg-indigo-600 hover:bg-indigo-700 rounded" %>
  <% end %>
<% end %>
